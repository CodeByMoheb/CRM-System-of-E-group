@model Sector_13_Welfare_Society___Digital_Management_System.Models.OrdersViewModel

@{
    ViewData["Title"] = "My Orders";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0 text-gray-800">My Bookings</h1>
                <a href="@Url.Action("Index", "Booking")" class="btn btn-primary">
                    <i class="fas fa-plus"></i> New Booking
                </a>
            </div>
        </div>
    </div>

    <!-- Bookings Table -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Service Bookings</h6>
                </div>
                <div class="card-body">
                    @if (Model.Bookings != null && Model.Bookings.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>Booking ID</th>
                                        <th>Service Name</th>
                                        <th>Service Type</th>
                                        <th>Booking Date</th>
                                        <th>Receipt No</th>
                                        <th>Amount</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var booking in Model.Bookings)
                                    {
                                        <tr>
                                            <td><strong>@booking.BookingNumber</strong></td>
                                            <td>
                                                @if (booking.BookingItems?.Any() == true)
                                                {
                                                    @booking.BookingItems.First().ServiceName
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Service Booking</span>
                                                }
                                            </td>
                                            <td>
                                                @if (booking.BookingItems?.Any() == true)
                                                {
                                                    @booking.BookingItems.First().ServiceType
                                                }
                                                else
                                                {
                                                    <span class="text-muted">N/A</span>
                                                }
                                            </td>
                                            <td>@booking.BookingDate.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                <small class="font-monospace">@booking.BookingNumber</small>
                                            </td>
                                            <td>
                                                <strong class="text-success">$@booking.TotalAmount.ToString("F2")</strong>
                                            </td>
                                            <td>
                                                <span class="badge badge-@(booking.PaymentStatus == "Pending" ? "warning" : booking.PaymentStatus == "Completed" ? "info" : booking.BookingStatus == "Processing" ? "primary" : booking.BookingStatus == "Completed" ? "success" : booking.BookingStatus == "Cancelled" ? "danger" : "secondary")">
                                                    @(booking.PaymentStatus == "Pending" ? "Pending Payment" : booking.PaymentStatus == "Completed" ? "Paid" : booking.BookingStatus ?? "Pending")
                                                </span>
                                            </td>
                                            <td>
                                                <div class="btn-group">
                                                    @if (booking.PaymentStatus == "Pending")
                                                    {
                                                        <a href="@Url.Action("ProcessPayment", "Booking", new { id = booking.Id })" 
                                                           class="btn btn-sm btn-success">
                                                            <i class="fas fa-credit-card"></i>
                                                        </a>
                                                    }
                                                    else if (booking.BookingStatus == "Completed")
                                                    {
                                                        <a href="@Url.Action("Invoice", "Booking", new { id = booking.Id })" 
                                                           class="btn btn-sm btn-primary" title="View Invoice">
                                                            <i class="fas fa-file-alt"></i>
                                                        </a>
                                                    }
                                                    else if (booking.BookingStatus == "Cancelled")
                                                    {
                                                        <span class="btn btn-sm btn-secondary disabled" title="Cancelled">
                                                            <i class="fas fa-times"></i>
                                                        </span>
                                                    }
                                                    
                                                    <a href="@Url.Action("Details", "Booking", new { id = booking.Id })" 
                                                       class="btn btn-sm btn-outline-info">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-calendar-times fa-4x text-gray-300 mb-3"></i>
                            <h4 class="text-gray-600">No Bookings Found</h4>
                            <p class="text-gray-500 mb-4">You haven't made any service bookings yet.</p>
                            <a href="@Url.Action("Index", "Booking")" class="btn btn-primary btn-lg">
                                <i class="fas fa-calendar-plus me-2"></i>Create Your First Booking
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>