@model List<CompanyCal>

@{
    ViewData["Title"] = "Audit Reports";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0 text-gray-800">
                    <i class="fas fa-file-alt me-2"></i>Audit Reports
                </h1>
                <a href="@Url.Action("Index")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
                </a>
            </div>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="row">
            @foreach (var booking in Model)
            {
                <div class="col-lg-6 col-xl-4 mb-4">
                    <div class="card shadow h-100">
                        <div class="card-header py-3 bg-success text-white">
                            <h6 class="m-0 font-weight-bold">
                                <i class="fas fa-check-circle me-2"></i>Booking #B-@booking.Id
                            </h6>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <strong>Service:</strong><br>
                                <span class="text-primary">@booking.Service?.Name</span>
                            </div>
                            
                            <div class="mb-3">
                                <strong>Booking Date:</strong><br>
                                @booking.CreatedAt.ToString("MMM dd, yyyy")
                            </div>
                            
                            <div class="mb-3">
                                <strong>Status:</strong><br>
                                <span class="badge badge-success">@booking.Status</span>
                            </div>
                            
                            <div class="mb-3">
                                <strong>Audit Completed:</strong><br>
                                @booking.AuditSessions.FirstOrDefault()?.AuditCompletedDate?.ToString("MMM dd, yyyy")
                            </div>
                            
                            <div class="d-grid">
                                <a href="@Url.Action("ViewAuditReport", new { id = booking.Id })" class="btn btn-success">
                                    <i class="fas fa-file-alt me-2"></i>View Audit Report
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <div class="card shadow text-center py-5">
                    <div class="card-body">
                        <i class="fas fa-file-alt fa-4x text-gray-300 mb-3"></i>
                        <h4 class="text-gray-600">No Audit Reports Available</h4>
                        <p class="text-gray-500 mb-4">You don't have any completed audit reports at the moment.</p>
                        <a href="@Url.Action("Index")" class="btn btn-primary">
                            <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

