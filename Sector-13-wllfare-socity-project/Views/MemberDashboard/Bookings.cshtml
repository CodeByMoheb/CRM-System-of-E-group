@model List<CompanyCal>

@{
    ViewData["Title"] = "My Bookings";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0 text-gray-800">
                    <i class="fas fa-calendar-check me-2"></i>My Service Bookings
                </h1>
                <a href="@Url.Action("Index", "Booking")" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>New Booking
                </a>
            </div>
        </div>
    </div>

    <!-- Bookings List -->
    <div class="row">
        <div class="col-12">
            @if (Model != null && Model.Any())
            {
                <div class="row">
                    @foreach (var booking in Model)
                    {
                        <div class="col-lg-6 col-xl-4 mb-4">
                            <div class="card shadow h-100">
                                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                                    <h6 class="m-0 font-weight-bold text-primary">
                                        Booking #B-@booking.Id
                                    </h6>
                                    <span class="badge badge-@(booking.Status == "Pending Payment" ? "warning" : booking.Status == "Paid" ? "info" : booking.Status == "Processing" ? "primary" : booking.Status == "Audit Complete" ? "success" : booking.Status == "CAP Required" ? "danger" : "secondary")">
                                        @(string.IsNullOrEmpty(booking.Status) ? "Pending Payment" : booking.Status)
                                    </span>
                                </div>
                                <div class="card-body">
                                    <div class="mb-3">
                                        @if (booking.Service != null)
                                        {
                                            <h6 class="text-gray-800 mb-2">
                                                <i class="fas fa-cog me-2"></i>@booking.Service.Name
                                            </h6>
                                            <p class="text-muted mb-2">
                                                <small><i class="fas fa-tag me-1"></i>@booking.Service.ServiceType</small>
                                            </p>
                                        }
                                        else
                                        {
                                            <h6 class="text-gray-800 mb-2">
                                                <i class="fas fa-cog me-2"></i>General Service
                                            </h6>
                                        }
                                        
                                        <div class="mb-2">
                                            <small class="text-muted">
                                                <i class="fas fa-calendar me-1"></i>
                                                Booked: @booking.CreatedAt.ToString("MMM dd, yyyy")
                                            </small>
                                        </div>

                                        <div class="mb-2">
                                            <small class="text-muted">
                                                <i class="fas fa-receipt me-1"></i>
                                                Receipt: #R-@booking.Id-@booking.CreatedAt.ToString("yyyyMM")
                                            </small>
                                        </div>

                                        @if (booking.Customer != null)
                                        {
                                            <div class="mb-2">
                                                <small class="text-muted">
                                                    <i class="fas fa-user me-1"></i>
                                                    Customer: @booking.Customer.Name
                                                </small>
                                            </div>
                                        }
                                    </div>

                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        <strong class="h5 mb-0 text-success">
                                            @if (booking.Total.HasValue && booking.Total.Value > 0)
                                            {
                                                @booking.Total.Value.ToString("C")
                                            }
                                            else
                                            {
                                                <span class="text-muted">Contact for Quote</span>
                                            }
                                        </strong>
                                    </div>
                                    
                                    <div class="d-grid gap-2">
                                        @if (string.IsNullOrEmpty(booking.Status) || booking.Status == "Pending Payment")
                                        {
                                            <a href="@Url.Action("ProcessPayment", "Booking", new { id = booking.Id })" 
                                               class="btn btn-success">
                                                <i class="fas fa-credit-card me-2"></i>Pay Now
                                            </a>
                                        }
                                        else if (booking.Status == "Audit Complete")
                                        {
                                            <a href="@Url.Action("ViewAuditReport", "MemberDashboard", new { id = booking.Id })" 
                                               class="btn btn-primary">
                                                <i class="fas fa-file-alt me-2"></i>View Audit Report
                                            </a>
                                        }
                                        else if (booking.Status == "CAP Required")
                                        {
                                            <a href="@Url.Action("ViewCAP", "MemberDashboard", new { id = booking.Id })" 
                                               class="btn btn-warning">
                                                <i class="fas fa-tasks me-2"></i>View CAP
                                            </a>
                                        }
                                        else
                                        {
                                            <button class="btn btn-outline-secondary" disabled>
                                                <i class="fas fa-clock me-2"></i>@booking.Status
                                            </button>
                                        }
                                        
                                        <div class="btn-group">
                                            <a href="@Url.Action("Details", "Booking", new { id = booking.Id })" 
                                               class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-eye me-1"></i>Details
                                            </a>
                                            <a href="@Url.Action("Invoice", "Booking", new { id = booking.Id })" 
                                               class="btn btn-sm btn-outline-info">
                                                <i class="fas fa-file-invoice me-1"></i>Invoice
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="card shadow">
                    <div class="card-body text-center py-5">
                        <i class="fas fa-calendar-times fa-4x text-gray-300 mb-3"></i>
                        <h4 class="text-gray-600">No Bookings Found</h4>
                        <p class="text-gray-500 mb-4">You haven't made any service bookings yet.</p>
                        <a href="@Url.Action("Index", "Booking")" class="btn btn-primary btn-lg">
                            <i class="fas fa-calendar-plus me-2"></i>Book a Service
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>