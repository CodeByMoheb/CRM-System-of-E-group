@model Sector_13_Welfare_Society___Digital_Management_System.Models.MemberDashboardViewModel

@{
    ViewData["Title"] = "Member Dashboard";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0 text-gray-800">Welcome, @Model.User.Name!</h1>
                <div class="btn-group">
                    <a href="@Url.Action("Index", "Booking")" class="btn btn-primary">
                        <i class="fas fa-plus"></i> New Booking
                    </a>
                    <a href="@Url.Action("Orders", "MemberDashboard")" class="btn btn-outline-secondary">
                        <i class="fas fa-shopping-bag"></i> My Orders
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Booking Success Alert -->
    @if (TempData["BookingSuccess"] != null)
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="alert alert-success alert-dismissible fade show shadow" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-check-circle fa-2x text-success me-3"></i>
                        <div>
                            <h5 class="alert-heading mb-1">Booking Created Successfully!</h5>
                            <p class="mb-0">@TempData["BookingSuccess"]</p>
                        </div>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        </div>
    }

    <!-- Current Bookings -->
    @if (Model.RecentBookings != null && Model.RecentBookings.Any())
    {
        @foreach (var booking in Model.RecentBookings.Take(3))
        {
            <div class="row mb-4">
                <div class="col-12">
                    <div class="card border-left-@(booking.PaymentStatus == "Pending" ? "warning" : booking.PaymentStatus == "Completed" ? "info" : booking.BookingStatus == "Processing" ? "primary" : booking.BookingStatus == "Completed" ? "success" : booking.BookingStatus == "Cancelled" ? "danger" : "secondary") shadow">
                        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                            <h6 class="m-0 font-weight-bold text-primary">
                                <i class="fas fa-clipboard-check me-2"></i>Booking #@booking.BookingNumber - @(booking.BookingItems?.FirstOrDefault()?.ServiceName ?? "Service Booking")
                            </h6>
                            <span class="badge badge-@(booking.PaymentStatus == "Pending" ? "warning" : booking.PaymentStatus == "Completed" ? "info" : booking.BookingStatus == "Processing" ? "primary" : booking.BookingStatus == "Completed" ? "success" : booking.BookingStatus == "Cancelled" ? "danger" : "secondary")">
                                @(booking.PaymentStatus == "Pending" ? "Pending Payment" : booking.PaymentStatus == "Completed" ? "Paid" : booking.BookingStatus ?? "Pending")
                            </span>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <p><strong>Service:</strong> @(booking.BookingItems?.FirstOrDefault()?.ServiceName ?? "Service Booking")</p>
                                    <p><strong>Service Type:</strong> @(booking.BookingItems?.FirstOrDefault()?.ServiceType ?? "N/A")</p>
                                    <p><strong>Booking Date:</strong> @booking.BookingDate.ToString("MMM dd, yyyy")</p>
                                    <p><strong>Amount:</strong> @booking.TotalAmount.ToString("C")</p>
                                </div>
                                <div class="col-md-6 text-end">
                                    @if (booking.PaymentStatus == "Pending")
                                    {
                                        <a href="@Url.Action("ProcessPayment", "Booking", new { id = booking.Id })" class="btn btn-success btn-lg">
                                            <i class="fas fa-credit-card me-2"></i>Pay Now
                                        </a>
                                    }
                                    else if (booking.PaymentStatus == "Completed")
                                    {
                                        <div class="alert alert-info mb-0">
                                            <i class="fas fa-clock me-2"></i>Payment received. Processing will begin shortly.
                                        </div>
                                    }
                                    else if (booking.BookingStatus == "Processing")
                                    {
                                        <div class="alert alert-primary mb-0">
                                            <i class="fas fa-cogs me-2"></i>Your booking is being processed.
                                        </div>
                                    }
                                    else if (booking.BookingStatus == "Completed")
                                    {
                                        <div class="alert alert-success mb-0">
                                            <i class="fas fa-check-circle me-2"></i>Booking completed successfully!
                                        </div>
                                    }
                                    else if (booking.BookingStatus == "Cancelled")
                                    {
                                        <div class="alert alert-danger mb-0">
                                            <i class="fas fa-times-circle me-2"></i>Booking has been cancelled.
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="card shadow text-center py-4">
                    <div class="card-body">
                        <i class="fas fa-calendar-plus fa-4x text-gray-300 mb-3"></i>
                        <h4 class="text-gray-600">No Active Bookings</h4>
                        <p class="text-gray-500 mb-4">You don't have any active bookings at the moment.</p>
                        <a href="@Url.Action("Index", "Booking")" class="btn btn-primary btn-lg">
                            <i class="fas fa-plus me-2"></i>Create New Booking
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Total Bookings
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@(Model.RecentBookings?.Count ?? 0)</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar-check fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Pending Payment
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @(Model.RecentBookings?.Count(b => b.PaymentStatus == "Pending") ?? 0)
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-credit-card fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Completed Bookings
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @(Model.RecentBookings?.Count(b => b.BookingStatus == "Completed") ?? 0)
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Cancelled Bookings
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @(Model.RecentBookings?.Count(b => b.BookingStatus == "Cancelled") ?? 0)
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-tasks fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Quick Actions</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("Index", "Booking")" class="btn btn-primary btn-lg w-100">
                                <i class="fas fa-plus fa-2x mb-2 d-block"></i>
                                Create New Booking
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("Orders", "MemberDashboard")" class="btn btn-info btn-lg w-100">
                                <i class="fas fa-shopping-bag fa-2x mb-2 d-block"></i>
                                View My Orders
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("PaymentHistory", "MemberDashboard")" class="btn btn-success btn-lg w-100">
                                <i class="fas fa-history fa-2x mb-2 d-block"></i>
                                Payment History
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("Logout", "Account")" class="btn btn-secondary btn-lg w-100">
                                <i class="fas fa-sign-out-alt fa-2x mb-2 d-block"></i>
                                Logout
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-refresh dashboard every 30 seconds for booking status updates
        setTimeout(function() {
            location.reload();
        }, 30000);
    </script>
}