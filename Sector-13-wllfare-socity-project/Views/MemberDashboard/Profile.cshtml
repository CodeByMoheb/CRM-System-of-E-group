@model Sector_13_Welfare_Society___Digital_Management_System.Models.ApplicationUser

@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">My Profile</h1>
        <div class="btn-group">
            <a href="@Url.Action("Index", "MemberDashboard")" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to Dashboard
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Personal Information</h6>
                </div>
                <div class="card-body">
                    <form asp-action="UpdateProfile" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Name" class="form-label">Full Name *</label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="FathersOrHusbandsName" class="form-label">Father's/Husband's Name</label>
                                <input asp-for="FathersOrHusbandsName" class="form-control" />
                                <span asp-validation-for="FathersOrHusbandsName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Email" class="form-label">Email *</label>
                                <input asp-for="Email" class="form-control" type="email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="PhoneNumber" class="form-label">Phone Number *</label>
                                <input asp-for="PhoneNumber" class="form-control" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Profession" class="form-label">Profession</label>
                                <input asp-for="Profession" class="form-control" />
                                <span asp-validation-for="Profession" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Designation" class="form-label">Designation</label>
                                <input asp-for="Designation" class="form-control" />
                                <span asp-validation-for="Designation" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="EducationalQualification" class="form-label">Educational Qualification</label>
                                <input asp-for="EducationalQualification" class="form-control" />
                                <span asp-validation-for="EducationalQualification" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="BloodGroup" class="form-label">Blood Group</label>
                                <input asp-for="BloodGroup" class="form-control" />
                                <span asp-validation-for="BloodGroup" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="NumberOfChildren" class="form-label">Number of Children</label>
                                <input asp-for="NumberOfChildren" class="form-control" type="number" min="0" />
                                <span asp-validation-for="NumberOfChildren" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Telephone" class="form-label">Telephone</label>
                                <input asp-for="Telephone" class="form-control" />
                                <span asp-validation-for="Telephone" class="text-danger"></span>
                            </div>
                        </div>

                        <hr class="my-4">

                        <h6 class="text-primary mb-3">Address Information</h6>
                        
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="HouseNo" class="form-label">House No</label>
                                <input asp-for="HouseNo" class="form-control" />
                                <span asp-validation-for="HouseNo" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="Ward" class="form-label">Ward</label>
                                <input asp-for="Ward" class="form-control" />
                                <span asp-validation-for="Ward" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="Holding" class="form-label">Holding</label>
                                <input asp-for="Holding" class="form-control" />
                                <span asp-validation-for="Holding" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="Sector" class="form-label">Sector</label>
                                <input asp-for="Sector" class="form-control" />
                                <span asp-validation-for="Sector" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="FlatNo" class="form-label">Flat No</label>
                                <input asp-for="FlatNo" class="form-control" />
                                <span asp-validation-for="FlatNo" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="RoadNo" class="form-label">Road No</label>
                                <input asp-for="RoadNo" class="form-control" />
                                <span asp-validation-for="RoadNo" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="text-end">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Update Profile
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Profile Summary -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Profile Summary</h6>
                </div>
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-user-circle fa-5x text-gray-300"></i>
                    </div>
                    <h5 class="text-primary">@Model.Name</h5>
                    <p class="text-muted">@Model.Email</p>
                    @if (!string.IsNullOrEmpty(Model.Profession))
                    {
                        <p><strong>Profession:</strong> @Model.Profession</p>
                    }
                    @if (!string.IsNullOrEmpty(Model.Designation))
                    {
                        <p><strong>Designation:</strong> @Model.Designation</p>
                    }
                    @if (Model.LastLoginTime.HasValue)
                    {
                        <p class="text-muted"><small>Last Login: @Model.LastLoginTime.Value.ToString("MMM dd, yyyy HH:mm")</small></p>
                    }
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Quick Actions</h6>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        <a href="@Url.Action("ChangePassword", "Account")" class="list-group-item list-group-item-action">
                            <i class="fas fa-key text-warning me-2"></i>
                            Change Password
                        </a>
                        <a href="@Url.Action("Orders", "MemberDashboard")" class="list-group-item list-group-item-action">
                            <i class="fas fa-shopping-bag text-info me-2"></i>
                            View Orders
                        </a>
                        <a href="@Url.Action("Cart", "MemberDashboard")" class="list-group-item list-group-item-action">
                            <i class="fas fa-shopping-cart text-success me-2"></i>
                            Shopping Cart
                        </a>
                        <a href="@Url.Action("Index", "Booking")" class="list-group-item list-group-item-action">
                            <i class="fas fa-plus text-primary me-2"></i>
                            Book Service
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
