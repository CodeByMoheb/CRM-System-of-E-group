@model Sector_13_Welfare_Society___Digital_Management_System.Models.PaginationModel<Sector_13_Welfare_Society___Digital_Management_System.Models.InvoiceViewModel>

@{
    ViewData["Title"] = "My Invoices";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<style>
    /* Increased base size for this page only */
    html, body {
        font-size: 14px !important; /* increased from 12px */
        color: #23272f !important;
        background: #f9fbfd;
    }
    .invoice-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.08);
        margin-bottom: 22px;
        overflow: hidden;
        transition: all 0.3s ease;
        border: 1px solid #e9ecef;
        height: 100%;
        font-size: 1rem !important; /* slightly larger */
        color: #23272f !important;
    }
    
    .invoices-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 21px;
        margin-bottom: 22px;
    }
    
    .invoice-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 40px rgba(0,0,0,0.17);
    }
    
    .invoice-header {
        background: linear-gradient(135deg, #23272f 0%, #445ae3 100%);
        color: #fff;
        padding: 20px 26px; /* a little more padding */
        position: relative;
        overflow: hidden;
        font-size: 1.03rem;
    }
    
    .invoice-header::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -50%;
        width: 200%;
        height: 200%;
        background: radial-gradient(circle, rgba(255,255,255,0.08) 0%, transparent 70%);
        animation: float 6s ease-in-out infinite;
    }
    
    .invoice-title {
        font-size: 1.18rem !important; /* slightly bigger */
        font-weight: bold;
        margin-bottom: 6px;
        color: #fff !important;
        position: relative;
        z-index: 2;
    }
    
    .invoice-subtitle {
        font-size: 0.9rem !important;
        opacity: 0.92;
        color: #e3e3e3 !important;
        position: relative;
        z-index: 2;
    }
    
    .invoice-body {
        padding: 20px;
        font-size: 1.02rem !important; /* increased */
        color: #23272f !important;
    }
    
    .invoice-details {
        background: #f4f6fa;
        padding: 12px;
        border-radius: 8px;
        margin-bottom: 14px;
        font-size: 0.98rem !important;
        color: #222 !important;
    }
    
    .detail-row {
        display: flex;
        justify-content: space-between;
        margin-bottom: 8px;
        padding: 8px 0;
        border-bottom: 1px solid #e3e4e8;
        font-size: 0.97rem !important;
    }
    
    .detail-row:last-child {
        border-bottom: none;
        margin-bottom: 0;
    }
    
    .detail-label {
        font-weight: 600;
        color: #21212b !important;
        font-size: 0.95rem !important;
    }
    
    .detail-value {
        color: #071125 !important;
        font-weight: 500;
        font-size: 0.95rem !important;
    }
    
    .status-badge {
        padding: 6px 14px !important; /* slightly larger badge */
        border-radius: 18px;
        font-weight: 700;
        font-size: 0.86rem !important;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        color: #fff !important;
    }
    
    .status-paid { 
        background: linear-gradient(135deg, #227a22 60%, #075c4c 100%); 
    }
    
    .status-pending { 
        background: linear-gradient(135deg, #e49611, #c34800);
    }
    
    .status-cancelled { 
        background: linear-gradient(135deg, #99111c, #3b013a);
    }
    
    .amount-display {
        font-size: 1.15rem !important; /* increased */
        font-weight: bold;
        color: #23272f !important;
        letter-spacing: 0.02em;
    }
    
    .action-buttons {
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
        font-size: 1rem !important;
    }
    
    .btn-premium {
        background: linear-gradient(135deg, #23272f, #6174db);
        border: none;
        color: #fff !important;
        padding: 9px 16px; /* larger buttons */
        border-radius: 22px;
        font-weight: 700;
        font-size: 1rem !important;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }
    
    .btn-premium:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(34, 39, 47, 0.19);
        color: #fff !important;
        text-decoration: none;
        background: linear-gradient(135deg, #2e3768, #4558bd);
    }
    
    .btn-outline-premium {
        border: 2px solid #23272f;
        color: #23272f !important;
        background: transparent;
        padding: 9px 16px;
        border-radius: 22px;
        font-size: 0.98rem !important;
        font-weight: 700;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }
    
    .btn-outline-premium:hover {
        background: #23272f;
        color: #fff !important;
        transform: translateY(-2px);
        text-decoration: none;
    }
    
    .summary-card {
        background: linear-gradient(135deg, #f7f8fa, #e9ecef);
        border-radius: 14px;
        padding: 20px;
        margin-bottom: 24px;
        border: 1px solid #d1d6db;
    }
    
    .summary-title {
        font-size: 1.02rem !important;
        font-weight: bold;
        color: #21386b !important;
        margin-bottom: 15px;
        text-align: center;
        letter-spacing: 0.07em;
    }
    
    .summary-stats {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(170px, 1fr));
        gap: 14px;
        font-size: 1rem !important;
    }
    
    .stat-item {
        text-align: center;
        padding: 11px;
        background: #fff;
        border-radius: 8px;
        box-shadow: 0 4px 12px rgba(34,39,47,0.035);
        font-size: 1rem !important;
    }
    
    .stat-number {
        font-size: 1.4rem !important; /* increased */
        font-weight: bold;
        color: #23272f !important;
        margin-bottom: 1px;
    }
    
    .stat-label {
        font-size: 0.9rem !important; /* increased */
        color: #495c6c !important;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.2px;
    }
    
    .no-invoices {
        text-align: center;
        padding: 38px 12px;
        background: linear-gradient(135deg, #f8f9fa, #e9ecef);
        border-radius: 12px;
        margin: 24px 0;
    }
    
    .no-invoices-icon {
        font-size: 2.8rem;
        color: #bbc2ca;
        margin-bottom: 10px;
    }
    
    .no-invoices h4 {
        color: #3b4152 !important;
        margin-bottom: 7px;
        font-weight: bold;
        font-size: 1.15rem;
    }
    
    .no-invoices p {
        color: #647184 !important;
        margin-bottom: 13px;
        font-size: 1rem;
    }
    
    @@keyframes float {
        0%, 100% { transform: translateY(0px) rotate(0deg); }
        50% { transform: translateY(-20px) rotate(180deg); }
    }
    
    .pagination-container {
        display: flex;
        justify-content: center;
        margin-top: 18px;
    }
    
    .pagination {
        display: flex;
        list-style: none;
        padding: 0;
        margin: 0;
        gap: 6px;
    }
    
    .page-item {
        margin: 0;
    }
    
    .page-link {
        display: block;
        padding: 8px 12px;
        text-decoration: none;
        color: #23272f !important;
        background: #fff;
        border: 1px solid #c3c3d4;
        border-radius: 8px;
        transition: all 0.25s;
        font-weight: 700;
        font-size: 0.98rem !important;
    }
    
    .page-link:hover {
        background: #23272f;
        color: #fff !important;
        border-color: #23272f;
        transform: translateY(-2px);
    }
    
    .page-item.active .page-link {
        background: #23272f;
        color: #fff !important;
        border-color: #23272f;
    }
    
    .page-item.disabled .page-link {
        color: #616782 !important;
        background: #f4f6fa;
        border-color: #c3c3d4;
        cursor: not-allowed;
    }
    
    .pagination-info {
        text-align: center;
        margin-top: 9px;
        color: #495c6c !important;
        font-size: 0.9rem;
    }
    
    @@media (max-width: 1200px) {
        .invoices-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }
    
    @@media (max-width: 768px) {
        .invoices-grid {
            grid-template-columns: 1fr;
        }
        
        .invoice-body {
            padding: 14px;
        }
        
        .action-buttons {
            flex-direction: column;
        }
        
        .btn-premium, .btn-outline-premium {
            justify-content: center;
        }
        
        .summary-stats {
            grid-template-columns: repeat(2, 1fr);
            gap: 10px;
        }
        
        .stat-item {
            padding: 9px;
        }
        
        .stat-number {
            font-size: 1.03rem;
        }
        
        .stat-label {
            font-size: 0.7rem;
        }
        
        .pagination {
            flex-wrap: wrap;
            justify-content: center;
        }
        
        .page-link {
            padding: 6px 8px;
            font-size: 0.82rem;
        }
    }
    
    @@media (max-width: 480px) {
        .summary-stats {
            grid-template-columns: repeat(2, 1fr);
            gap: 6px;
        }
        
        .stat-item {
            padding: 5px;
        }
        
        .stat-number {
            font-size: 0.92rem;
        }
        
        .stat-label {
            font-size: 0.65rem;
        }
    }
</style>

<div class="container-fluid py-4" style="font-size: 0.94rem; color: #23272f;">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800" style="font-size: 1.1rem !important; color: #23272f !important;">
            <i class="fas fa-file-invoice me-2" style="color: #445ae3;"></i>
            My Invoices
        </h1>
        <a href="@Url.Action("Orders", "MemberDashboard")" class="btn btn-outline-premium">
            <i class="fas fa-arrow-left"></i> Back to Orders
        </a>
    </div>

    <!-- Invoice Summary -->
    <div class="summary-card">
        <h3 class="summary-title">
            <i class="fas fa-chart-pie me-2"></i>
            Invoice Summary
        </h3>
        <div class="summary-stats">
            <div class="stat-item">
                <div class="stat-number">@Model.TotalItems</div>
                <div class="stat-label">Total Invoices</div>
            </div>
            <div class="stat-item">
                <div class="stat-number" style="color: #227a22;">@Model.Items.Count(i => i.Status == "Paid")</div>
                <div class="stat-label">Paid Invoices</div>
            </div>
            <div class="stat-item">
                <div class="stat-number" style="color: #e49611;">@Model.Items.Count(i => i.Status == "Pending")</div>
                <div class="stat-label">Pending Invoices</div>
            </div>
            <div class="stat-item">
                <div class="stat-number" style="color: #445ae3;">$@Model.Items.Sum(i => i.Amount).ToString("F2")</div>
                <div class="stat-label">Total Amount</div>
            </div>
        </div>
    </div>

    <!-- Invoices List -->
    @if (Model.Items.Any())
    {
        <div class="invoices-grid">
            @foreach (var invoice in Model.Items)
            {
                <div class="invoice-card">
                    <!-- Invoice Header -->
                    <div class="invoice-header">
                        <h3 class="invoice-title">
                            <i class="fas fa-file-invoice me-2"></i>
                            Invoice #@invoice.Number
                        </h3>
                        <p class="invoice-subtitle">@invoice.Type - @invoice.Date.ToString("MMMM dd, yyyy")</p>
                    </div>

                    <!-- Invoice Body -->
                    <div class="invoice-body">
                        <!-- Invoice Details -->
                        <div class="invoice-details">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="detail-row">
                                        <span class="detail-label">Invoice Number:</span>
                                        <span class="detail-value">@invoice.Number</span>
                                    </div>
                                    <div class="detail-row">
                                        <span class="detail-label">Invoice Date:</span>
                                        <span class="detail-value">@invoice.Date.ToString("MMMM dd, yyyy")</span>
                                    </div>
                                    <div class="detail-row">
                                        <span class="detail-label">Type:</span>
                                        <span class="detail-value">@invoice.Type</span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="detail-row">
                                        <span class="detail-label">Amount:</span>
                                        <span class="detail-value amount-display">$@invoice.Amount.ToString("F2")</span>
                                    </div>
                                    <div class="detail-row">
                                        <span class="detail-label">Status:</span>
                                        <span class="status-badge status-@invoice.Status.ToLower()">@invoice.Status</span>
                                    </div>
                                    <div class="detail-row">
                                        <span class="detail-label">Payment Due:</span>
                                        <span class="detail-value">@invoice.Date.AddDays(30).ToString("MMM dd, yyyy")</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="action-buttons">
                            @if (invoice.Type == "Booking")
                            {
                                <button type="button" class="btn-premium" onclick="viewInvoice(@invoice.Id)">
                                    <i class="fas fa-eye"></i> View Full Invoice
                                </button>
                            }
                            
                            @if (invoice.Status == "Pending")
                            {
                                @* <a href="@Url.Action("Index", "Payment", new { orderId = invoice.Id })" class="btn-outline-premium">
                                    <i class="fas fa-credit-card"></i> Pay Now
                                </a> *@
                            }
                            
                            @* <button onclick="window.print()" class="btn-outline-premium">
                                <i class="fas fa-print"></i> Print Invoice
                            </button> *@
                        </div>
                    </div>
                </div>
            }
        </div>
        
        <!-- Pagination -->
        @if (Model.TotalPages > 1)
        {
            <div class="pagination-container">
                <ul class="pagination">
                    @if (Model.HasPreviousPage)
                    {
                        <li class="page-item">
                            <a class="page-link" href="?page=@Model.PreviousPage">
                                <i class="fas fa-chevron-left"></i> Previous
                            </a>
                        </li>
                    }
                    
                    @for (int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                    {
                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                            <a class="page-link" href="?page=@i">@i</a>
                        </li>
                    }
                    
                    @if (Model.HasNextPage)
                    {
                        <li class="page-item">
                            <a class="page-link" href="?page=@Model.NextPage">
                                Next <i class="fas fa-chevron-right"></i>
                            </a>
                        </li>
                    }
                </ul>
            </div>
            
            <div class="pagination-info">
                Showing @Model.StartIndex to @Model.EndIndex of @Model.TotalItems invoices
            </div>
        }
    }
    else
    {
        <div class="no-invoices">
            <i class="fas fa-file-invoice no-invoices-icon"></i>
            <h4>No Invoices Found</h4>
            <p>Once you place orders or make bookings, your invoices will appear here with detailed information and professional formatting.</p>
            <a href="@Url.Action("Index", "Booking")" class="btn-premium">
                <i class="fas fa-plus"></i> Book a Service
            </a>
        </div>
    }
</div>

<!-- Invoice Modal -->
<div class="modal fade" id="invoiceModal" tabindex="-1" aria-labelledby="invoiceModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="invoiceModalLabel" style="font-size: 1.04rem; color: #23272f;">Invoice Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="invoiceModalBody">
                <!-- Invoice content will be loaded here -->
                <div class="text-center">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" style="font-size:0.92rem;">Close</button>
                <button type="button" class="btn btn-primary" onclick="printInvoice()" style="font-size:0.92rem;">Print Invoice</button>
            </div>
        </div>
    </div>
</div>

<script>
function viewInvoice(invoiceId) {
    var modal = new bootstrap.Modal(document.getElementById('invoiceModal'));
    modal.show();
    loadInvoiceData(invoiceId);
}

function loadInvoiceData(invoiceId) {
    document.getElementById('invoiceModalBody').innerHTML = `
        <div class="text-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    `;
    fetch('@Url.Action("InvoiceById", "Booking")' + '?id=' + invoiceId)
        .then(response => {
            if (!response.ok) {
                throw new Error('Network response was not ok');
            }
            return response.text();
        })
        .then(data => {
            document.getElementById('invoiceModalBody').innerHTML = data;
        })
        .catch(error => {
            console.error('Error loading invoice:', error);
            document.getElementById('invoiceModalBody').innerHTML = `
                <div class="alert alert-danger" role="alert" style="font-size:0.89rem;">
                    <h4 class="alert-heading">Error!</h4>
                    <p>Failed to load invoice details. Please try again.</p>
                </div>
            `;
        });
}

function printInvoice() {
    var modalContent = document.getElementById('invoiceModalBody');
    var printWindow = window.open('', '_blank');
    var styles = '';
    var styleSheets = document.styleSheets;
    for (var i = 0; i < styleSheets.length; i++) {
        try {
            var rules = styleSheets[i].cssRules || styleSheets[i].rules;
            for (var j = 0; j < rules.length; j++) {
                styles += rules[j].cssText + '\n';
            }
        } catch (e) {
            // Skip stylesheets that can't be accessed due to CORS
        }
    }
    
    printWindow.document.write(`
        <html>
        <head>
            <title>Invoice</title>
            <style>
                ${styles}
                
                body { 
                    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; 
                    margin: 0; 
                    padding: 13px;
                    background: white;
                    color: #23272f !important;
                    font-size: 11px !important;
                }
                .invoice-container {
                    color: #23272f !important;
                    background: white;
                    font-size: 11px !important;
                }
                .invoice-title { color: #23272f !important; font-size: 1.02rem !important; font-weight: 700; }
                .invoice-details p, .company-address p, .client-info p, .payment-info p {
                    margin-bottom: 0.10rem;
                    font-size: 0.79rem !important;
                    color: #23272f !important;
                }
                .invoice-table thead th, .invoice-table tbody td, .totals-table td {
                    font-size: 0.73rem !important;
                    color: #23272f !important;
                }
                .footer-line {
                    border-top: 1px solid #b7b7b7;
                    margin: 7px 0 4px 0;
                }
                .text-primary {
                    color: #23272f !important;
                }
                .fw-bold {
                    font-weight: 700 !important;
                }
                .small {
                    font-size: 0.75rem;
                }
                .btn, .modal-header, .modal-footer, .spinner-border, .alert {
                    display: none !important;
                }
                .modal-body {
                    padding: 0 !important;
                }
                @@media print {
                    body { margin: 0; padding: 0; }
                    .invoice-container { 
                        font-size: 9px !important; 
                        padding: 8px; 
                        max-width: none; 
                        margin: 0;
                        width: 100%;
                    }
                    .footer-color-bar-full {
                        position: fixed !important;
                        left: 0 !important;
                        right: 0 !important;
                        bottom: 0 !important;
                        display: flex !important;
                        width: 100vw !important;
                        height: 12px !important;
                        margin: 0 !important;
                        padding: 0 !important;
                        -webkit-print-color-adjust: exact;
                    }
                    @@page {
                        margin: 0 !important;
                        padding: 0 !important;
                    }
                    .invoice-title { font-size: 0.87rem !important; }
                    .invoice-logo { height: 22px; }
                    .invoice-table, .totals-table {
                        font-size: 0.7rem !important;
                        border: 1px solid #23272f !important;
                        table-layout: fixed;
                    }
                    .invoice-table thead th, .invoice-table tbody td, .totals-table td {
                        font-size: 0.7rem !important;
                        color: #23272f !important;
                        border: 1px solid #23272f !important;
                        padding: 2px 3px;
                    }
                    .balance-due { background-color: #eae9f9 !important; -webkit-print-color-adjust: exact; }
                }
            </style>
        </head>
        <body>
            ${modalContent.innerHTML}
        </body>
        </html>
    `);
    
    printWindow.document.close();
    printWindow.onload = function() {
        printWindow.print();
    };
}
</script>
