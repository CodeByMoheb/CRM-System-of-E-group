                    .invoice-table th:nth-child(4),
                    .invoice-table td:nth-child(4) {
                        width: 20% !important;
                        text-align: right;
                    }
                    .invoice-table tbody td {
                        padding: 3px 4px;
                        font-size: 0.7rem;
                    }
                    .totals-table td {
                        padding: 2px 0;
                        font-size: 0.7rem;
                    }
                    .balance-due {
                        background-color: #f8f9fa !important;
                        -webkit-print-color-adjust: exact;
                    }
                    .balance-due td {
                        padding-top: 4px;
                        padding-bottom: 4px;
                    }
                    .footer-line {
