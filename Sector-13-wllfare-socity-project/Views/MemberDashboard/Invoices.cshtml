@model List<Sector_13_Welfare_Society___Digital_Management_System.Models.InvoiceViewModel>

@{
    ViewData["Title"] = "My Invoices";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container-fluid py-4">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">My Invoices</h1>
        <a href="@Url.Action("Orders", "MemberDashboard")" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
            <i class="fas fa-arrow-left fa-sm text-white-50"></i> Back to Orders
        </a>
    </div>

    <!-- Invoice Summary Cards -->
    <div class="row mb-4">
        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Total Invoices
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Count()</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-file-invoice fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Paid Invoices
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Count(i => i.Status == "Paid")</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Pending Invoices
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Count(i => i.Status == "Pending")</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-clock fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Invoices List -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Invoice History</h6>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Invoice #</th>
                                <th>Type</th>
                                <th>Date</th>
                                <th>Amount</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var invoice in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@invoice.Number</strong>
                                        <small class="badge badge-@(invoice.Type == "Order" ? "primary" : "info") ml-1">@invoice.Type</small>
                                    </td>
                                    <td>@invoice.Type</td>
                                    <td>@invoice.Date.ToString("MMM dd, yyyy")</td>
                                    <td>@invoice.Amount.ToString("C")</td>
                                    <td>
                                        <span class="badge badge-@(invoice.Status == "Paid" ? "success" : invoice.Status == "Pending" ? "warning" : "secondary")">
                                            @invoice.Status
                                        </span>
                                    </td>
                                    <td>
                                        @if (invoice.Type == "Booking")
                                        {
                                            <a href="@Url.Action("Invoice", "Booking", new { id = invoice.Id })" class="btn btn-sm btn-outline-info">View Invoice</a>
                                        }
                                        
                                        @if (invoice.Status == "Pending")
                                        {
                                            <a href="@Url.Action("Index", "Payment", new { orderId = invoice.Id })" class="btn btn-sm btn-success ml-1">Pay Now</a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-file-invoice fa-4x text-gray-300 mb-3"></i>
                    <h5 class="text-gray-600">No invoices found.</h5>
                    <p class="text-gray-500">Once you place orders or make bookings, your invoices will appear here.</p>
                    <a href="@Url.Action("Index", "Booking")" class="btn btn-primary mt-3">Book a Service</a>
                </div>
            }
        </div>
    </div>
</div>
