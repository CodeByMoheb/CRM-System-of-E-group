@model Sector_13_Welfare_Society___Digital_Management_System.Models.MemberDashboardViewModel

@{
    ViewData["Title"] = "Member Dashboard";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0 text-gray-800">Welcome, @Model.User.Name!</h1>
                <div class="btn-group">
                    <a href="@Url.Action("Index", "Booking")" class="btn btn-primary">
                        <i class="fas fa-plus"></i> New Booking
                    </a>
                    <a href="@Url.Action("Profile", "MemberDashboard")" class="btn btn-outline-secondary">
                        <i class="fas fa-user"></i> Profile
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Order Success Alert -->
    @if (TempData["OrderSuccess"] != null)
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="alert alert-success alert-dismissible fade show shadow" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-check-circle fa-2x text-success me-3"></i>
                        <div>
                            <h5 class="alert-heading mb-1">ðŸŽ‰ Order Created Successfully!</h5>
                            <p class="mb-0">@TempData["OrderSuccess"]</p>
                        </div>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        </div>
    }

    <!-- Booking Success Alert (Backward Compatibility) -->
    @if (TempData["BookingSuccess"] != null)
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="alert alert-success alert-dismissible fade show shadow" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-check-circle fa-2x text-success me-3"></i>
                        <div>
                            <h5 class="alert-heading mb-1">ðŸŽ‰ Booking Successful!</h5>
                            <p class="mb-0">@TempData["BookingSuccess"]</p>
                        </div>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        </div>
    }

    <!-- Current Bookings -->
    @if (Model.RecentBookings != null && Model.RecentBookings.Any())
    {
        @foreach (var booking in Model.RecentBookings.Take(3))
        {
            <div class="row mb-4">
                <div class="col-12">
                    <div class="card border-left-@(booking.Status == "Pending Payment" ? "warning" : booking.Status == "Paid" ? "info" : booking.Status == "Processing" ? "primary" : booking.Status == "Audit Complete" ? "success" : booking.Status == "CAP Required" ? "danger" : "secondary") shadow">
                        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                            <h6 class="m-0 font-weight-bold text-primary">
                                <i class="fas fa-clipboard-check me-2"></i>Booking #B-@booking.Id - @(booking.Service?.Name ?? "Service Booking")
                            </h6>
                            <span class="badge badge-@(booking.Status == "Pending Payment" ? "warning" : booking.Status == "Paid" ? "info" : booking.Status == "Processing" ? "primary" : booking.Status == "Audit Complete" ? "success" : booking.Status == "CAP Required" ? "danger" : "secondary")">
                                @(string.IsNullOrEmpty(booking.Status) ? "Pending Payment" : booking.Status)
                            </span>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <p><strong>Service:</strong> @(booking.Service?.Name ?? "Service Booking")</p>
                                    <p><strong>Service Type:</strong> @(booking.Service?.ServiceType ?? "N/A")</p>
                                    <p><strong>Booking Date:</strong> @booking.CreatedAt.ToString("MMM dd, yyyy")</p>
                                    @if (booking.Total.HasValue)
                                    {
                                        <p><strong>Amount:</strong> @booking.Total.Value.ToString("C")</p>
                                    }
                                </div>
                                <div class="col-md-6 text-end">
                                    @if (string.IsNullOrEmpty(booking.Status) || booking.Status == "Pending Payment")
                                    {
                                        <a href="@Url.Action("ProcessPayment", "Booking", new { id = booking.Id })" class="btn btn-success btn-lg">
                                            <i class="fas fa-credit-card me-2"></i>Pay Now
                                        </a>
                                    }
                                    else if (booking.Status == "Paid")
                                    {
                                        <div class="alert alert-info mb-0">
                                            <i class="fas fa-clock me-2"></i>Payment received. Processing will begin shortly.
                                        </div>
                                    }
                                    else if (booking.Status == "Processing")
                                    {
                                        <div class="alert alert-primary mb-0">
                                            <i class="fas fa-cogs me-2"></i>Your booking is being processed. Audit will begin soon.
                                        </div>
                                    }
                                    else if (booking.Status == "Audit Complete")
                                    {
                                        <div class="alert alert-success mb-0">
                                            <i class="fas fa-check-circle me-2"></i>Audit completed successfully!
                                        </div>
                                        <a href="@Url.Action("ViewAuditReport", "MemberDashboard", new { id = booking.Id })" class="btn btn-success mt-2">
                                            <i class="fas fa-file-alt me-2"></i>View Report
                                        </a>
                                    }
                                    else if (booking.Status == "CAP Required")
                                    {
                                        <div class="alert alert-warning mb-0">
                                            <i class="fas fa-exclamation-triangle me-2"></i>Corrective Action Plan required
                                        </div>
                                        <a href="@Url.Action("ViewCAP", "MemberDashboard", new { id = booking.Id })" class="btn btn-warning mt-2">
                                            <i class="fas fa-tasks me-2"></i>View CAP
                                        </a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="card shadow text-center py-4">
                    <div class="card-body">
                        <i class="fas fa-calendar-plus fa-4x text-gray-300 mb-3"></i>
                        <h4 class="text-gray-600">No Active Bookings</h4>
                        <p class="text-gray-500 mb-4">You don't have any active bookings at the moment.</p>
                        <a href="@Url.Action("Index", "Booking")" class="btn btn-primary btn-lg">
                            <i class="fas fa-plus me-2"></i>Create New Booking
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Total Bookings
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@(Model.RecentBookings?.Count ?? 0)</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar-check fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Pending Payment
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @(Model.RecentBookings?.Count(b => string.IsNullOrEmpty(b.Status) || b.Status == "Pending Payment") ?? 0)
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-credit-card fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Completed Audits
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @(Model.RecentBookings?.Count(b => b.Status == "Audit Complete") ?? 0)
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                CAP Required
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @(Model.RecentBookings?.Count(b => b.Status == "CAP Required") ?? 0)
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-tasks fa-2x text-gray-300"></i>
                        </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">$@Model.TotalSpent.ToString("F2")</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Recent Orders -->
        <div class="col-lg-8 mb-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Recent Orders</h6>
                    <a href="@Url.Action("Orders", "MemberDashboard")" class="btn btn-sm btn-primary">View All</a>
                </div>
                <div class="card-body">
                    @if (Model.Orders.Any() || Model.RecentBookings.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>Order #</th>
                                        <th>Service</th>
                                        <th>Date</th>
                                        <th>Status</th>
                                        <th>Total</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @* Show recent bookings first *@
                                    @foreach (var booking in Model.RecentBookings.Take(3))
                                    {
                                        <tr class="table-success">
                                            <td>
                                                <strong>B-@booking.Id</strong>
                                                <small class="badge badge-success ml-1">Booking</small>
                                            </td>
                                            <td>
                                                @if (booking.Service != null)
                                                {
                                                    @booking.Service.Name
                                                    <small class="text-muted d-block">@booking.Service.ServiceType</small>
                                                }
                                                else
                                                {
                                                    <span>Service Details</span>
                                                }
                                            </td>
                                            <td>@booking.CreatedAt.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                <span class="badge badge-warning">Pending Approval</span>
                                            </td>
                                            <td>
                                                @if (booking.Total.HasValue)
                                                {
                                                    @booking.Total.Value.ToString("C")
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Quote Required</span>
                                                }
                                            </td>
                                            <td>
                                                <a href="@Url.Action("Invoice", "Booking")" 
                                                   class="btn btn-sm btn-outline-success">View</a>
                                            </td>
                                        </tr>
                                    }
                                    
                                    @* Show regular orders *@
                                    @foreach (var order in Model.Orders.Take(2))
                                    {
                                        <tr>
                                            <td>
                                                @order.OrderNumber
                                                <small class="badge badge-primary ml-1">Order</small>
                                            </td>
                                            <td>
                                                <span>Multiple Items</span>
                                                <small class="text-muted d-block">Regular Order</small>
                                            </td>
                                            <td>@order.CreatedAt.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                <span class="badge badge-@(order.OrderStatus == "Completed" ? "success" : order.OrderStatus == "Pending" ? "warning" : "secondary")">
                                                    @order.OrderStatus
                                                </span>
                                            </td>
                                            <td>$@order.TotalAmount.ToString("F2")</td>
                                            <td>
                                                <a href="@Url.Action("OrderDetails", "MemberDashboard", new { id = order.Id })" 
                                                   class="btn btn-sm btn-outline-primary">View</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-shopping-bag fa-3x text-gray-300 mb-3"></i>
                            <h5 class="text-gray-600">No orders yet</h5>
                            <p class="text-gray-500">Start shopping to see your orders here!</p>
                            <a href="@Url.Action("Index", "Booking")" class="btn btn-primary">Browse Services</a>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Cart Summary -->
        <div class="col-lg-4 mb-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Shopping Cart</h6>
                    <a href="@Url.Action("Cart", "MemberDashboard")" class="btn btn-sm btn-primary">View Cart</a>
                </div>
                <div class="card-body">
                    @if (Model.CartItems.Any())
                    {
                        <div class="mb-3">
                            <p class="mb-1"><strong>Items in cart:</strong> @Model.CartItems.Count</p>
                            <p class="mb-1"><strong>Total:</strong> $@Model.CartItems.Sum(c => c.TotalAmount).ToString("F2")</p>
                        </div>
                        <div class="list-group">
                            @foreach (var item in Model.CartItems.Take(3))
                            {
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="mb-1">@item.ServiceName</h6>
                                        <small class="text-muted">Qty: @item.Quantity</small>
                                    </div>
                                    <span class="badge badge-primary badge-pill">$@item.TotalAmount.ToString("F2")</span>
                                </div>
                            }
                        </div>
                        @if (Model.CartItems.Count > 3)
                        {
                            <div class="text-center mt-2">
                                <small class="text-muted">+@(Model.CartItems.Count - 3) more items</small>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-shopping-cart fa-3x text-gray-300 mb-3"></i>
                            <h5 class="text-gray-600">Cart is empty</h5>
                            <p class="text-gray-500">Add some services to your cart!</p>
                            <a href="@Url.Action("Index", "Booking")" class="btn btn-primary">Browse Services</a>
                        </div>
                    }
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Quick Actions</h6>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        <a href="@Url.Action("Index", "Booking")" class="list-group-item list-group-item-action">
                            <i class="fas fa-plus-circle text-primary me-2"></i>
                            Book New Service
                        </a>
                        <a href="@Url.Action("Orders", "MemberDashboard")" class="list-group-item list-group-item-action">
                            <i class="fas fa-list text-info me-2"></i>
                            View All Orders
                        </a>
                        <a href="@Url.Action("Profile", "MemberDashboard")" class="list-group-item list-group-item-action">
                            <i class="fas fa-user-edit text-warning me-2"></i>
                            Edit Profile
                        </a>
                        <a href="@Url.Action("Logout", "Account")" class="list-group-item list-group-item-action text-danger">
                            <i class="fas fa-sign-out-alt me-2"></i>
                            Logout
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-refresh dashboard every 30 seconds for order status updates
        setTimeout(function() {
            location.reload();
        }, 30000);
    </script>
}
