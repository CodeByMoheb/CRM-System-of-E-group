@model AuditQuestionnaireViewModel

@{
    ViewData["Title"] = "Audit Report";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0 text-gray-800">
                    <i class="fas fa-file-alt me-2"></i>Audit Report - Booking #B-@Model.Booking.Id
                </h1>
                <div class="btn-group">
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
                    </a>
                    <button onclick="window.print()" class="btn btn-primary">
                        <i class="fas fa-print me-2"></i>Print Report
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Booking Information -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header py-3 bg-success text-white">
                    <h6 class="m-0 font-weight-bold">
                        <i class="fas fa-info-circle me-2"></i>Audit Information
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <strong>Service:</strong><br>
                            @Model.Booking.Service?.Name
                        </div>
                        <div class="col-md-3">
                            <strong>Booking Date:</strong><br>
                            @Model.Booking.CreatedAt.ToString("MMM dd, yyyy")
                        </div>
                        <div class="col-md-3">
                            <strong>Audit Completed:</strong><br>
                            @Model.AuditSession.AuditCompletedDate?.ToString("MMM dd, yyyy")
                        </div>
                        <div class="col-md-3">
                            <strong>Auditor:</strong><br>
                            @Model.AuditSession.Auditor?.Name
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Audit Results Summary -->
    <div class="row mb-4">
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Passed
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @Model.Responses.Count(r => r.ResponseValue == "Yes")
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Partial
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @Model.Responses.Count(r => r.ResponseValue == "Partial")
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-exclamation-triangle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card border-left-danger shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">
                                Failed
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @Model.Responses.Count(r => r.ResponseValue == "No")
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-times-circle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Total Questions
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @Model.Responses.Count
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-clipboard-list fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Audit Status Alert -->
    @if (Model.AuditSession.RequiresCAP)
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="alert alert-warning alert-dismissible fade show shadow" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-exclamation-triangle fa-2x text-warning me-3"></i>
                        <div>
                            <h5 class="alert-heading mb-1">Corrective Action Required</h5>
                            <p class="mb-0">Some areas need improvement. A Corrective Action Plan (CAP) has been created for you.</p>
                        </div>
                    </div>
                    <div class="mt-3">
                        <a href="@Url.Action("ViewCAP", new { id = Model.Booking.Id })" class="btn btn-warning">
                            <i class="fas fa-tasks me-2"></i>View Corrective Action Plan
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="alert alert-success alert-dismissible fade show shadow" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-check-circle fa-2x text-success me-3"></i>
                        <div>
                            <h5 class="alert-heading mb-1">Audit Passed!</h5>
                            <p class="mb-0">Congratulations! Your audit has been completed successfully with no major issues found.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Detailed Audit Results -->
    <div class="row">
        <div class="col-12">
            @if (Model.Responses.Any())
            {
                var groupedResponses = Model.Responses
                    .GroupBy(r => r.AuditQuestion.Category)
                    .OrderBy(g => g.Key);
                
                @foreach (var categoryGroup in groupedResponses)
                {
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">
                                <i class="fas fa-folder me-2"></i>@categoryGroup.Key
                            </h6>
                        </div>
                        <div class="card-body">
                            @foreach (var response in categoryGroup.OrderBy(r => r.AuditQuestion.SortOrder))
                            {
                                <div class="row mb-3 audit-item">
                                    <div class="col-md-8">
                                        <strong>@response.AuditQuestion.QuestionText</strong>
                                        @if (!string.IsNullOrEmpty(response.Comments))
                                        {
                                            <div class="mt-2">
                                                <small class="text-muted">
                                                    <i class="fas fa-comment me-1"></i>
                                                    <strong>Auditor Comments:</strong> @response.Comments
                                                </small>
                                            </div>
                                        }
                                    </div>
                                    <div class="col-md-4 text-end">
                                        @if (response.ResponseValue == "Yes")
                                        {
                                            <span class="badge badge-success badge-lg">
                                                <i class="fas fa-check me-1"></i>Passed
                                            </span>
                                        }
                                        else if (response.ResponseValue == "Partial")
                                        {
                                            <span class="badge badge-warning badge-lg">
                                                <i class="fas fa-exclamation-triangle me-1"></i>Partial
                                            </span>
                                        }
                                        else if (response.ResponseValue == "No")
                                        {
                                            <span class="badge badge-danger badge-lg">
                                                <i class="fas fa-times me-1"></i>Failed
                                            </span>
                                        }
                                    </div>
                                </div>
                                @if (response != categoryGroup.Last())
                                {
                                    <hr>
                                }
                            }
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="card shadow">
                    <div class="card-body text-center py-5">
                        <i class="fas fa-file-alt fa-4x text-gray-300 mb-3"></i>
                        <h4 class="text-gray-600">No Audit Results Available</h4>
                        <p class="text-gray-500">The audit report is not available at this time.</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .badge-lg {
        font-size: 0.9rem;
        padding: 0.5rem 0.75rem;
    }
    
    .audit-item {
        border-left: 4px solid transparent;
        padding-left: 1rem;
        margin-left: -1rem;
        border-radius: 0.25rem;
    }
    
    .audit-item:has(.badge-success) {
        border-left-color: #28a745;
        background-color: rgba(40, 167, 69, 0.05);
    }
    
    .audit-item:has(.badge-warning) {
        border-left-color: #ffc107;
        background-color: rgba(255, 193, 7, 0.05);
    }
    
    .audit-item:has(.badge-danger) {
        border-left-color: #dc3545;
        background-color: rgba(220, 53, 69, 0.05);
    }

    @@media print {
        .btn-group, .btn, .alert .btn {
            display: none !important;
        }
        
        .card {
            border: 1px solid #dee2e6 !important;
            box-shadow: none !important;
        }
    }
</style>