@model List<CompanyCal>

@{
    ViewData["Title"] = "Corrective Action Plans";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0 text-gray-800">
                    <i class="fas fa-tasks me-2"></i>Corrective Action Plans
                </h1>
                <a href="@Url.Action("Index")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
                </a>
            </div>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="row">
            @foreach (var booking in Model)
            {
                var auditSession = booking.AuditSessions.FirstOrDefault();
                var capCount = auditSession?.CorrectiveActionPlans?.Count ?? 0;
                var completedCount = auditSession?.CorrectiveActionPlans?.Count(cap => cap.Status == "Completed") ?? 0;
                var pendingCount = auditSession?.CorrectiveActionPlans?.Count(cap => cap.Status == "Pending") ?? 0;
                
                <div class="col-lg-6 col-xl-4 mb-4">
                    <div class="card shadow h-100">
                        <div class="card-header py-3 bg-warning text-dark">
                            <h6 class="m-0 font-weight-bold">
                                <i class="fas fa-exclamation-triangle me-2"></i>Booking #B-@booking.Id
                            </h6>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <strong>Service:</strong><br>
                                <span class="text-primary">@booking.Service?.Name</span>
                            </div>
                            
                            <div class="mb-3">
                                <strong>Booking Date:</strong><br>
                                @booking.CreatedAt.ToString("MMM dd, yyyy")
                            </div>
                            
                            <div class="mb-3">
                                <strong>Status:</strong><br>
                                <span class="badge badge-warning">@booking.Status</span>
                            </div>
                            
                            <div class="mb-3">
                                <strong>Action Items:</strong><br>
                                <div class="row text-center">
                                    <div class="col-4">
                                        <div class="text-danger">
                                            <strong>@capCount</strong><br>
                                            <small>Total</small>
                                        </div>
                                    </div>
                                    <div class="col-4">
                                        <div class="text-success">
                                            <strong>@completedCount</strong><br>
                                            <small>Completed</small>
                                        </div>
                                    </div>
                                    <div class="col-4">
                                        <div class="text-warning">
                                            <strong>@pendingCount</strong><br>
                                            <small>Pending</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="d-grid">
                                <a href="@Url.Action("ViewCAP", new { id = booking.Id })" class="btn btn-warning">
                                    <i class="fas fa-tasks me-2"></i>View CAP
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <div class="card shadow text-center py-5">
                    <div class="card-body">
                        <i class="fas fa-tasks fa-4x text-gray-300 mb-3"></i>
                        <h4 class="text-gray-600">No Corrective Action Plans</h4>
                        <p class="text-gray-500 mb-4">You don't have any corrective action plans at the moment.</p>
                        <a href="@Url.Action("Index")" class="btn btn-primary">
                            <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

