@model Service

<div class="modal-header" style="border-bottom: 2px solid #dee2e6;">
    <h5 class="modal-title" style="font-weight: 700; font-size: 1.5rem; color: #04fc00;">Service Details</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"
            style="filter: invert(27%) sepia(95%) saturate(7480%) hue-rotate(0deg) brightness(96%) contrast(105%);">
    </button>
</div>

<div class="modal-body" style="background-color: #ffffff; padding: 1.5rem; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; color: #333;">
    <div style="display: flex; flex-direction: column; gap: 12px;">

        <!-- Name -->
        <div>
            <strong style="color: #555;">Name:</strong>
            <span style="font-weight: 600; color: #111;">@Model.Name</span>
        </div>
        <!-- Service Type -->
        <div>
            <strong style="color: #555;">Service Type:</strong>
            <span style="color: #111;">@Model.ServiceType</span>
        </div>
        <!-- Description -->
        <div>
            <strong style="color: #555;">Description:</strong>
            <span style="color: #111;">@(!string.IsNullOrEmpty(Model.Description) ? Model.Description : "-")</span>
        </div>

        <!-- Registration Fees -->
        <div >
            <strong style="color: #555;">Registration Fees:</strong>
            <span style="color: #111; font-weight: 600;">@Model.Registration_fees?.ToString("C2") @Model.Currency</span>
        </div>

        <!-- Base Price -->
        <div >
            <strong style="color: #555;">Base Price:</strong>
            <span style="color: #111; font-weight: 600;">@Model.BasePrice?.ToString("C2") @Model.Currency</span>
        </div>

        <!-- Active Status -->
        <div >
            <strong style="color: #555;">Active:</strong>
            <span style="color: @(Model.IsActive ? "#28a745" : "#dc3545"); font-weight: 600;">
                @(Model.IsActive ? "Yes" : "No")
            </span>
        </div>

      
    </div>
</div>

<div class="modal-footer" style="background-color: #ffffff; border-top: 2px solid #dee2e6; justify-content: center;">
    <button type="button" class="btn" data-bs-dismiss="modal"
            style="background-color: #667eea; color: #fff; font-weight: 600; border-radius: 0.3rem; padding: 0.5rem 1.5rem;">
        Close
    </button>
</div>
