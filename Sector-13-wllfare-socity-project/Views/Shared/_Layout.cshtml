    <script>
        // Navigation functionality
        class Navigation {
            constructor() {
                this.hamburger = document.querySelector('.hamburger');
                this.navMenu = document.querySelector('.nav-menu');
                this.navLinks = document.querySelectorAll('.nav-link, .dropdown-item'); // Include dropdown items

                this.init();
            }

            init() {
                this.bindEvents();
                this.handleScroll();
            }

            bindEvents() {
                this.hamburger.addEventListener('click', () => this.toggleMenu());

                this.navLinks.forEach(link => {
                    link.addEventListener('click', (e) => {
                        const targetId = link.getAttribute('href');
                        if (targetId && targetId.startsWith('#')) {
                            e.preventDefault(); // Only prevent default for hash links
                            this.smoothScroll(targetId);
                            if (window.innerWidth <= 768) { // Close menu only on smaller screens
                                this.closeMenu();
                            }
                        }
                        // For non-hash links (like login/register), allow default behavior
                    });
                });

                // Close menu when clicking outside (on mobile)
                document.addEventListener('click', (e) => {
                    if (window.innerWidth <= 768 && !this.hamburger.contains(e.target) && !this.navMenu.contains(e.target)) {
                        this.closeMenu();
                    }
                });
            }

            toggleMenu() {
                this.hamburger.classList.toggle('active');
                this.navMenu.classList.toggle('active');

                const bars = this.hamburger.querySelectorAll('.bar');
                if (this.hamburger.classList.contains('active')) {
                    bars[0].style.transform = 'rotate(-45deg) translate(-5px, 6px)';
                    bars[1].style.opacity = '0';
                    bars[2].style.transform = 'rotate(45deg) translate(-5px, -6px)';
                } else {
                    bars[0].style.transform = 'none';
                    bars[1].style.opacity = '1';
                    bars[2].style.transform = 'none';
                }
            }

            closeMenu() {
                this.hamburger.classList.remove('active');
                this.navMenu.classList.remove('active');

                const bars = this.hamburger.querySelectorAll('.bar');
                bars[0].style.transform = 'none';
                bars[1].style.opacity = '1';
                bars[2].style.transform = 'none';
            }

            smoothScroll(targetId) {
                const targetElement = document.querySelector(targetId);
                if (targetElement) {
                    const navbarHeight = document.querySelector('.navbar').offsetHeight; // Get dynamic navbar height
                    const offsetTop = targetElement.offsetTop - navbarHeight - 10; // Adjust for navbar and a little more space
                    window.scrollTo({
                        top: offsetTop,
                        behavior: 'smooth'
                    });
                }
            }

            handleScroll() {
                window.addEventListener('scroll', () => {
                    const navbar = document.querySelector('.navbar');
                    if (window.scrollY > 50) { // Changed scroll threshold
                        navbar.style.background = 'rgba(255, 255, 255, 0.98)';
                        navbar.style.boxShadow = '0 2px 20px rgba(0, 0, 0, 0.1)';
                    } else {
                        navbar.style.background = 'rgba(255, 255, 255, 0.95)';
                        navbar.style.boxShadow = 'none';
                    }
                });
            }
        }

        // Animation on scroll
        class ScrollAnimations {
            constructor() {
                this.animatedElements = document.querySelectorAll('.feature-card, .stat-card, .program-card'); // Added program-card
                this.init();
            }

            init() {
                this.bindEvents();
                this.checkElements(); // Initial check on page load
            }

            bindEvents() {
                window.addEventListener('scroll', () => this.checkElements());
                window.addEventListener('resize', () => this.checkElements()); // Re-check on resize
            }

            checkElements() {
                this.animatedElements.forEach(element => {
                    const elementTop = element.getBoundingClientRect().top;
                    const elementVisible = 150; // Adjust this value as needed

                    if (elementTop < window.innerHeight - elementVisible) {
                        element.classList.add('animate');
                    } else {
                        // Optional: remove 'animate' class if element scrolls out of view upwards
                        // This can make animations re-trigger if element comes back into view
                        // element.classList.remove('animate');
                    }
                });
            }
        }

        // Add loading animation (optional, for a fade-in effect on page load)
        window.addEventListener('load', () => {
            document.body.style.opacity = '1';
            document.body.style.transition = 'opacity 0.5s ease-in';
        });

        // Initial body opacity setting to enable fade-in
        document.body.style.opacity = '0';

        // Instantiate Navigation for responsive nav toggle
        document.addEventListener('DOMContentLoaded', function() {
            new Navigation();
        });
    </script>
    
