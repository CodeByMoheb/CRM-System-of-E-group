@model List<Sector_13_Welfare_Society___Digital_Management_System.Models.Category>

<table class="table table-bordered table-striped">
    <thead class="table-light">
        <tr>
            <th>Type</th>
            <th>Name</th>
            <th>Value</th>
            <th>Active</th>
            <th>Serial</th>
            <th>Created At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cat in Model)
        {
            <tr>
                <td>@cat.Type</td>
                <td>@cat.Name</td>
                <td>@cat.Value</td>
                <td>
                    @if (cat.IsActive)
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Inactive</span>
                    }
                </td>
                <td>@cat.Serial</td>
                <td>@cat.CreatedAt.ToString("yyyy-MM-dd")</td>
                <td>
                    <a asp-action="EditCategory" asp-route-id="@cat.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="DeleteCategory" asp-route-id="@cat.Id" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this category?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
