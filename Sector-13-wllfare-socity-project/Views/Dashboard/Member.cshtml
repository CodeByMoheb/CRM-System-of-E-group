                                <div class="quick-actions">
                                    <div class="row g-3 justify-content-center">
                                        <div class="col-md-4">
                                            <a href="@Url.Action("MyAttendance", "EmployeeAttendance")" class="btn btn-outline-primary w-100 quick-action-btn">
                                                <i class="fas fa-history me-2"></i>
                                                <span>My Attendance</span>
                                            </a>
                                        </div>
                                        <div class="col-md-4">
                                            <a href="@Url.Action("LeaveRequest", "Dashboard")" class="btn btn-outline-warning w-100 quick-action-btn">
                                                <i class="fas fa-calendar-plus me-2"></i>
                                                <span>Apply Leave</span>
                                            </a>
                                        </div>
                                        <div class="col-md-4">
                                            <a href="@Url.Action("MyLeaves", "EmployeeAttendance")" class="btn btn-outline-info w-100 quick-action-btn">
                                                <i class="fas fa-calendar-check me-2"></i>
                                                <span>Leave Status</span>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Today's Summary -->
                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="today-summary">
                                    <div class="row g-3">
                                        <div class="col-md-3">
                                            <div class="summary-card bg-gradient-success text-white">
                                                <div class="card-body text-center p-3">
                                                    <i class="fas fa-clock fa-2x mb-2"></i>
                                                    <h6 class="mb-1">Today's Status</h6>
                                                    <div id="emp-attn-today" class="fw-bold">Not Started</div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="summary-card bg-gradient-info text-white">
                                                <div class="card-body text-center p-3">
                                                    <i class="fas fa-calendar-day fa-2x mb-2"></i>
                                                    <h6 class="mb-1">Current Date</h6>
                                                    <div class="fw-bold" id="current-date">@DateTime.Now.ToString("dd MMM yyyy")</div>
                                                </div>
                                            </div>
                                        </div>
