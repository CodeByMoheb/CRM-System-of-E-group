@section Scripts {
    <script>
        $(document).ready(function () {
            // Check if jQuery is loaded
            if (typeof $ === 'undefined') {
                console.error('jQuery is not loaded. Please check the jQuery library inclusion.');
                return;
            }

            console.log('jQuery loaded successfully');
            console.log('ViewBag.IsEmployeeUser:', @(ViewBag.IsEmployeeUser == true ? "true" : "false"));
            console.log('Check-in button exists:', $('#empCheckIn').length > 0);
            console.log('Check-out button exists:', $('#empCheckOut').length > 0);
            
            // Show debug information
            console.log('Debug info:', $('#debug-info').html());
            
            // Test basic button functionality regardless of employee status
            $('#empCheckIn').on('click', function(e) {
                console.log('Basic check-in click detected');
            });
            
            $('#empCheckOut').on('click', function(e) {
                console.log('Basic check-out click detected');
            });

            if (@(ViewBag.IsEmployeeUser == true ? "true" : "false")) {
                console.log('Employee user detected, initializing attendance system...');
                
                // Update current time every second
                setInterval(function() {
                    var now = new Date();
                    $('#current-time').text(now.toLocaleTimeString());
                    $('#current-date').text(now.toLocaleDateString('en-US', { 
                        day: '2-digit', 
                        month: 'short', 
                        year: 'numeric' 
                    }));
                }, 1000);

                // Test if buttons exist and add basic click handler
                console.log('Setting up button event handlers...');
                
                // Enhanced Check In functionality
                $('#empCheckIn').on('click', function (e) {
                    e.preventDefault();
                    var btn = $(this);
                    var originalText = btn.find('.btn-title').text();
                    
                    console.log('Check-in button clicked - event handler triggered');
                    
                    // Show loading state
                    btn.prop('disabled', true);
                    btn.find('.btn-title').text('Processing...');
                    btn.find('.icon-container i').removeClass('fa-sign-in-alt').addClass('fa-spinner fa-spin');
                    
                    // Add CSRF token for the request
                    var token = $('input[name="__RequestVerificationToken"]').val();
                    if (!token) {
                        // Try to get token from meta tag
                        token = $('meta[name="__RequestVerificationToken"]').attr('content');
                    }
                    console.log('CSRF Token found:', token ? 'Yes' : 'No');
                    
                    // Helper to perform POST after we have location (or not)
                    function postCheckIn(locationString) {
                    $.ajax({
                        url: '/EmployeeAttendance/CheckIn',
                        type: 'POST',
                        data: {
                                __RequestVerificationToken: token,
                                location: locationString || ''
                        },
                        dataType: 'json',
                        success: function (res) {
                            console.log('Check-in response:', res);
                            if (res && res.success) {
                                showStatus('success', res.message || 'Successfully checked in!');
                                if (res.checkInTime) {
                                    $('#emp-attn-today').text('Checked in at ' + res.checkInTime);
                                }
                                // Disable check-in button permanently after successful check-in
                                btn.prop('disabled', true);
                                btn.addClass('btn-success').removeClass('btn-checkin');
                                btn.find('.btn-title').text('Already Checked In');
                                btn.find('.btn-subtitle').text('Ready to check out');
                            } else {
                                showStatus('error', res.message || 'Check-in failed');
                            }
                        },
                        error: function (xhr, status, error) {
                            console.error('Check-in error:', error, xhr.responseText);
                            var errorMessage = 'Check-in failed. Please try again.';
                            if (xhr.responseJSON && xhr.responseJSON.message) {
                                errorMessage = xhr.responseJSON.message;
                            }
                            showStatus('error', errorMessage);
                        },
                        complete: function () {
                            // Restore button state
                            btn.prop('disabled', false);
                            btn.find('.btn-title').text(originalText);
                            btn.find('.icon-container i').removeClass('fa-spinner fa-spin').addClass('fa-sign-in-alt');
                        }
                    });
                    }

                    // Try to get geolocation (high accuracy). If denied or failed, continue without.
                    if (navigator.geolocation) {
                        navigator.geolocation.getCurrentPosition(function (pos) {
                            var lat = pos.coords.latitude.toFixed(6);
                            var lng = pos.coords.longitude.toFixed(6);
                            var acc = Math.round(pos.coords.accuracy);
                            var loc = lat + ',' + lng + ' (~' + acc + 'm)';
                            postCheckIn(loc);
                        }, function (err) {
                            console.warn('Geolocation error:', err);
                            postCheckIn('');
                        }, {
                            enableHighAccuracy: true,
                            timeout: 10000,
                            maximumAge: 0
                        });
                    } else {
                        postCheckIn('');
                    }
                });

                // Enhanced Check Out functionality
                $('#empCheckOut').on('click', function (e) {
                    e.preventDefault();
                    var btn = $(this);
                    var originalText = btn.find('.btn-title').text();
                    
                    console.log('Check-out button clicked');
                    
                    // Show loading state
                    btn.prop('disabled', true);
                    btn.find('.btn-title').text('Processing...');
                    btn.find('.icon-container i').removeClass('fa-sign-out-alt').addClass('fa-spinner fa-spin');
                    
                    // Add CSRF token for the request
                    var token = $('input[name="__RequestVerificationToken"]').val();
                    if (!token) {
                        // Try to get token from meta tag
                        token = $('meta[name="__RequestVerificationToken"]').attr('content');
                    }
                    console.log('CSRF Token found:', token ? 'Yes' : 'No');
                    
                    $.ajax({
                        url: '/EmployeeAttendance/CheckOut',
                        type: 'POST',
                        data: {
                            __RequestVerificationToken: token
                        },
                        dataType: 'json',
                        success: function (res) {
                            console.log('Check-in response:', res);
                            console.log('Check-out response:', res);
                            console.log('Check-out success:', res.success);
                            console.log('Check-out time:', res.checkOutTime);
                            console.log('Total hours:', res.totalHours);
                            if (res && res.success) {
                                showStatus('success', res.message || 'Successfully checked out!');
                                if (res.checkOutTime) {
                                    $('#emp-attn-today').text('Checked out at ' + res.checkOutTime);
                                }
                                if (res.totalHours) {
                                    console.log('Total hours calculated:', res.totalHours);
                                }
                                // Disable check-out button permanently after successful check-out
                                btn.prop('disabled', true);
                                btn.addClass('btn-success').removeClass('btn-checkout');
                                btn.find('.btn-title').text('Already Checked Out');
                                btn.find('.btn-subtitle').text('Completed for today');
                                
                                // Also disable check-in button to prevent multiple check-ins
                                $('#empCheckIn').prop('disabled', true);
                                $('#empCheckIn').addClass('btn-secondary').removeClass('btn-checkin');
                                $('#empCheckIn').find('.btn-title').text('Already Checked In');
                                $('#empCheckIn').find('.btn-subtitle').text('Completed for today');
                            } else {
                                showStatus('error', res.message || 'Check-out failed');
                            }
                        },
                        error: function (xhr, status, error) {
                            console.error('Check-out error:', error, xhr.responseText);
                            var errorMessage = 'Check-out failed. Please try again.';
                            if (xhr.responseJSON && xhr.responseJSON.message) {
                                errorMessage = xhr.responseJSON.message;
                            }
                            showStatus('error', errorMessage);
                        },
                        complete: function () {
                            // Restore button state
                            btn.prop('disabled', false);
                            btn.find('.btn-title').text(originalText);
                            btn.find('.icon-container i').removeClass('fa-spinner fa-spin').addClass('fa-sign-out-alt');
                        }
                    });
                });

                // Enhanced status display function
                function showStatus(type, message) {
                    var statusDiv = $('#emp-attn-status');
                    var statusText = $('#status-text');
                    
                    console.log('Showing status:', type, message);
                    
                    // Remove existing classes
                    statusDiv.removeClass('alert-info alert-success alert-danger alert-warning');
                    
                    // Add appropriate classes and icon
                    if (type === 'success') {
                        statusDiv.addClass('alert-success');
                        statusText.html('<i class="fas fa-check-circle me-2"></i>' + message);
                    } else if (type === 'error') {
                        statusDiv.addClass('alert-danger');
                        statusText.html('<i class="fas fa-exclamation-circle me-2"></i>' + message);
                    } else if (type === 'warning') {
                        statusDiv.addClass('alert-warning');
                        statusText.html('<i class="fas fa-exclamation-triangle me-2"></i>' + message);
                    } else {
                        statusDiv.addClass('alert-info');
                        statusText.html('<i class="fas fa-info-circle me-2"></i>' + message);
                    }
                    
                    // Add animation
                    statusDiv.addClass('status-animate');
                    setTimeout(() => {
                        statusDiv.removeClass('status-animate');
                    }, 500);
                }
                
                // Initialize status
                showStatus('info', 'Ready to mark your attendance');
                
                // Check current attendance status
                checkCurrentAttendanceStatus();
                
                // Function to check current attendance status
                function checkCurrentAttendanceStatus() {
                    $.ajax({
                        url: '/EmployeeAttendance/GetCurrentAttendanceStatus',
                        type: 'GET',
                        dataType: 'json',
                        success: function (res) {
                            console.log('Current attendance status:', res);
                            if (res && res.hasCheckIn) {
                                $('#empCheckIn').prop('disabled', true);
                                $('#empCheckIn').addClass('btn-success').removeClass('btn-checkin');
                                $('#empCheckIn').find('.btn-title').text('Already Checked In');
                                $('#empCheckIn').find('.btn-subtitle').text('Ready to check out');
                                
                                if (res.checkInTime) {
                                    $('#emp-attn-today').text('Checked in at ' + res.checkInTime);
                                }
                                
                                if (res.hasCheckOut) {
                                    $('#empCheckOut').prop('disabled', true);
                                    $('#empCheckOut').addClass('btn-success').removeClass('btn-checkout');
                                    $('#empCheckOut').find('.btn-title').text('Already Checked Out');
                                    $('#empCheckOut').find('.btn-subtitle').text('Completed for today');
                                    
                                    if (res.checkOutTime) {
                                        $('#emp-attn-today').text('Checked out at ' + res.checkOutTime);
                                    }
                                }
                            }
                        },
                        error: function (xhr, status, error) {
                            console.log('Could not check attendance status:', error);
                        }
                    });
                }
            } else {
                console.log('Non-employee user, attendance system not initialized');
            }
        });
    </script>
}

<style>
    /* Enhanced Styling for Attendance System */
    .attendance-card {
        border-radius: 20px;
        overflow: hidden;
        transition: all 0.3s ease;
    }

    .attendance-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 20px 40px rgba(0,0,0,0.1) !important;
    }

    .bg-gradient-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .bg-gradient-info {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
    }

    .bg-gradient-success {
        background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
    }

    .bg-gradient-warning {
        background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
    }

    .bg-gradient-secondary {
        background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
    }

    .employee-badge {
        animation: pulse 2s infinite;
    }

    @@keyframes pulse {
        0% { transform: scale(1); }
        50% { transform: scale(1.05); }
        100% { transform: scale(1); }
    }

    /* Enhanced Button Styling */
    .attendance-btn {
        position: relative;
        border: none;
        border-radius: 15px;
        padding: 0;
        overflow: hidden;
        transition: all 0.3s ease;
        height: 120px;
        box-shadow: 0 8px 25px rgba(0,0,0,0.15);
    }

    .attendance-btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 15px 35px rgba(0,0,0,0.2);
    }

    .attendance-btn:active {
        transform: translateY(0);
    }

    .btn-checkin {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }

    .btn-checkout {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        color: white;
    }

    .btn-content {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100%;
        padding: 20px;
        position: relative;
        z-index: 2;
    }

    .icon-container {
        margin-right: 15px;
        font-size: 2.5rem;
        opacity: 0.9;
    }

    .text-container {
        text-align: left;
    }

    .btn-title {
        display: block;
        font-size: 1.2rem;
        font-weight: 600;
        margin-bottom: 5px;
    }

    .btn-subtitle {
        display: block;
        font-size: 0.9rem;
        opacity: 0.8;
    }

    .btn-ripple {
        position: absolute;
        top: 50%;
        left: 50%;
        width: 0;
        height: 0;
        border-radius: 50%;
        background: rgba(255,255,255,0.3);
        transform: translate(-50%, -50%);
        transition: width 0.6s, height 0.6s;
    }

    .attendance-btn:hover .btn-ripple {
        width: 300px;
        height: 300px;
    }

    /* Quick Action Buttons */
    .quick-action-btn {
        border-radius: 12px;
        padding: 12px 20px;
        font-weight: 500;
        transition: all 0.3s ease;
        border-width: 2px;
    }

    .quick-action-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(0,0,0,0.15);
    }

    /* Summary Cards */
    .summary-card {
        border-radius: 15px;
        border: none;
        transition: all 0.3s ease;
        overflow: hidden;
    }

    .summary-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 10px 25px rgba(0,0,0,0.15);
    }

    /* Status Display */
    .status-display {
        border-radius: 15px;
