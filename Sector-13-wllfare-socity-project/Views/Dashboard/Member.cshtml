    {
        <!-- Enhanced Employee Self Attendance Section -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card border-0 shadow-lg attendance-card">
                    <div class="card-header bg-gradient-info text-white py-4 border-0">
                        <div class="row align-items-center">
                            <div class="col-md-8">
                                <h4 class="mb-2">
                                    <i class="fas fa-user-clock me-3"></i>
                                    Employee Self Attendance System
