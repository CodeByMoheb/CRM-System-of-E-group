                                                <div class="card-body text-center p-3">
                                                    <i class="fas fa-clock fa-2x mb-2"></i>
                                                    <h6 class="mb-1">Current Time</h6>
                                                    <div class="fw-bold" id="current-time">@DateTime.Now.ToString("HH:mm:ss")</div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
