@model Sector_13_Welfare_Society___Digital_Management_System.Models.CartViewModel

@{
    ViewData["Title"] = "Shopping Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center py-4">
                    <h1 class="mb-0">
                        <i class="fas fa-shopping-cart me-3"></i>
                        Shopping Cart
                    </h1>
                    <p class="mb-0 mt-2">Review your selected services</p>
                </div>
                
                <div class="card-body p-5">
                    @if (Model.CartItems.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead class="table-primary">
                                    <tr>
                                        <th>Service</th>
                                        <th>Type</th>
                                        <th>Unit Price</th>
                                        <th>Quantity</th>
                                        <th>Location</th>
                                        <th>Total</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.CartItems)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@item.ServiceName</strong><br>
                                                <small class="text-muted">@item.ServiceDescription</small>
                                            </td>
                                            <td>@item.ServiceType</td>
                                            <td>$@item.UnitPrice.ToString("F2")</td>
                                            <td>
                                                <input type="number" class="form-control" value="@item.Quantity" min="1" 
                                                       onchange="updateQuantity(@item.Id, this.value)" style="width: 80px;">
                                            </td>
                                            <td>@item.Location</td>
                                            <td>$@item.TotalAmount.ToString("F2")</td>
                                            <td>
                                                <button type="button" class="btn btn-danger btn-sm" 
                                                        onclick="removeFromCart(@item.Id)">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Cart Summary -->
                        <div class="row mt-4">
                            <div class="col-md-6 offset-md-6">
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <h6 class="card-title text-primary">Cart Summary</h6>
                                        <div class="d-flex justify-content-between mb-2">
                                            <span>Items (@Model.ItemCount):</span>
                                            <span>$@Model.TotalAmount.ToString("F2")</span>
                                        </div>
                                        <div class="d-flex justify-content-between mb-2">
                                            <span>VAT (15%):</span>
                                            <span>$@((Model.TotalAmount * 0.15m).ToString("F2"))</span>
                                        </div>
                                        <hr>
                                        <div class="d-flex justify-content-between">
                                            <strong>Total Amount:</strong>
                                            <strong class="text-success">$@((Model.TotalAmount * 1.15m).ToString("F2"))</strong>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="row mt-4">
                            <div class="col-12 text-center">
                                <button type="button" class="btn btn-success btn-lg me-3" onclick="createOrder()">
                                    <i class="fas fa-credit-card me-2"></i>
                                    Place Order
                                </button>
                                <a href="@Url.Action("Index", "Booking")" class="btn btn-outline-primary btn-lg me-3">
                                    <i class="fas fa-plus me-2"></i>
                                    Add More Services
                                </a>
                                <a href="@Url.Action("Index", "Home")" class="btn btn-secondary btn-lg">
                                    <i class="fas fa-home me-2"></i>
                                    Continue Shopping
                                </a>
                            </div>
                        </div>
                    }
                    else
                    {
                        <!-- Empty Cart -->
                        <div class="text-center py-5">
                            <i class="fas fa-shopping-cart fa-5x text-muted mb-4"></i>
                            <h3 class="text-muted">Your cart is empty</h3>
                            <p class="text-muted">Add some services to get started!</p>
                            <a href="@Url.Action("Index", "Booking")" class="btn btn-primary btn-lg">
                                <i class="fas fa-plus me-2"></i>
                                Browse Services
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function removeFromCart(cartItemId) {
            Swal.fire({
                title: 'Are you sure?',
                text: "This item will be removed from your cart.",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Yes, remove it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '@Url.Action("RemoveFromCart", "Booking")',
                        type: 'POST',
                        data: { cartItemId: cartItemId },
                        success: function(response) {
                            if (response.success) {
                                Swal.fire({
                                    icon: 'success',
                                    title: 'Removed!',
                                    text: response.message,
                                    showConfirmButton: false,
                                    timer: 1500
                                }).then(() => {
                                    location.reload();
                                });
                            } else {
                                Swal.fire({
                                    icon: 'error',
                                    title: 'Error',
                                    text: response.message
                                });
                            }
                        },
                        error: function() {
                            Swal.fire({
                                icon: 'error',
                                title: 'Error',
                                text: 'An error occurred while removing the item.'
                            });
                        }
                    });
                }
            });
        }

        function updateQuantity(cartItemId, quantity) {
            if (quantity < 1) {
                quantity = 1;
            }
            
            $.ajax({
                url: '@Url.Action("UpdateCartQuantity", "Booking")',
                type: 'POST',
                data: { 
                    cartItemId: cartItemId,
                    quantity: quantity
                },
                success: function(response) {
                    if (response.success) {
                        location.reload();
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: response.message
                        });
                    }
                },
                error: function() {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: 'An error occurred while updating quantity.'
                    });
                }
            });
        }

        function createOrder() {
            Swal.fire({
                title: 'Place Order?',
                text: "This will create an order and redirect you to payment.",
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#28a745',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Yes, place order!'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '@Url.Action("CreateOrder", "Booking")',
                        type: 'POST',
                        success: function(response) {
                            if (response.success) {
                                window.location.href = response.redirectUrl;
                            } else {
                                Swal.fire({
                                    icon: 'error',
                                    title: 'Error',
                                    text: response.message
                                });
                            }
                        },
                        error: function() {
                            Swal.fire({
                                icon: 'error',
                                title: 'Error',
                                text: 'An error occurred while creating the order.'
                            });
                        }
                    });
                }
            });
        }
    </script>
}
