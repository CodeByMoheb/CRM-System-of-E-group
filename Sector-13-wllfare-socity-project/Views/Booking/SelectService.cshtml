@model IEnumerable<Sector_13_Welfare_Society___Digital_Management_System.Models.Service>

@{
    ViewData["Title"] = "Our Services List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="services-title-wrapper text-center mb-5">
        <h2 class="services-title">Our Services List</h2>
        <div class="services-title-underline mx-auto mt-2"></div>
    </div>

    <div class="row justify-content-center g-4">
        @foreach (var service in Model ?? Enumerable.Empty<Sector_13_Welfare_Society___Digital_Management_System.Models.Service>())
        {
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card h-100 service-card text-center border-0 rounded-3 shadow-sm" onclick="selectService(@service.Id)" style="cursor: pointer;">
                    <div class="card-top-border"></div>
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title fw-bold">@service.Name</h5>
                        
                        <div class="service-type-badge mb-3">
                            @service.ServiceType
                    </div>

                        <p class="card-text text-muted flex-fill" style="font-size:0.9rem;">
                            @if (!string.IsNullOrEmpty(service.Description))
                            {
                                @(service.Description.Length > 100 ? service.Description.Substring(0, 100) + "..." : service.Description)
                        }
                        else
                        {
                                <em>Professional @service.ServiceType certification service to help your business meet industry standards and compliance requirements.</em>
                            }
                        </p>
                        
                        <button class="btn btn-primary select-service-btn">
                            <i class="bi bi-arrow-right me-2"></i>Select This Service
                            </button>
                        </div>
                </div>
            </div>
        }
            </div>
        </div>

<style>
    /* Modern Title Styling */
    .services-title-wrapper {
        margin-top: 30px; /* Space from navbar */
    }

    .services-title {
        font-size: 2.5rem;
        font-weight: 700;
        color: #333;
        position: relative;
        display: inline-block;
    }

    .services-title-underline {
        width: 80px;
        height: 4px;
        background: #d32f2f; /* Accent color */
        border-radius: 2px;
    }

    /* Card hover effect with top border */
    .service-card {
        position: relative;
        transition: transform 0.3s, box-shadow 0.3s;
    }

    .service-card .card-top-border {
        height: 5px;
        width: 100%;
        background-color: transparent;
        position: absolute;
        top: 0;
        left: 0;
        border-top-left-radius: 0.75rem;
        border-top-right-radius: 0.75rem;
        transition: background-color 0.3s;
    }

    .service-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 25px rgba(0,0,0,0.15);
    }

    .service-card:hover .card-top-border {
        background-color: #d32f2f; /* Red like your screenshot */
    }


    /* Service Type Badge */
    .service-type-badge {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        color: #3B3B98;
        padding: 6px 12px;
        border-radius: 15px;
        font-size: 0.8rem;
        font-weight: 600;
        display: inline-block;
        border: 1px solid rgba(59, 59, 152, 0.1);
    }


    /* Select Service Button */
    .select-service-btn {
        background: linear-gradient(135deg, #3B3B98 0%, #4A4AA8 100%);
        border: none;
        border-radius: 20px;
        padding: 10px 20px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        font-size: 0.9rem;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(59, 59, 152, 0.3);
    }

    .select-service-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(59, 59, 152, 0.4);
        background: linear-gradient(135deg, #4A4AA8 0%, #3B3B98 100%);
    }

    /* Ensure spacing for mobile */
    @@media (max-width: 767.98px) {
        .service-card { 
            margin-bottom: 1.5rem; 
        }
        .services-title {
            font-size: 2rem;
        }
    }
</style>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        function selectService(serviceId) {
            // Add loading effect
            const card = event.currentTarget;
            const btn = card.querySelector('.select-service-btn');
            const originalText = btn.innerHTML;
            
            btn.innerHTML = '<i class="bi bi-hourglass-split me-2"></i>Loading...';
            btn.disabled = true;
            
            // Simulate loading delay for better UX
            setTimeout(() => {
                // Redirect to booking form with selected service
                window.location.href = '@Url.Action("Index", "Booking")' + '?serviceId=' + serviceId;
            }, 500);
        }

        // Add hover effects
        document.addEventListener('DOMContentLoaded', function() {
            const cards = document.querySelectorAll('.service-card');
            
            cards.forEach(card => {
                card.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-5px)';
                });
                
                card.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0)';
                });
    });
});
</script>
}