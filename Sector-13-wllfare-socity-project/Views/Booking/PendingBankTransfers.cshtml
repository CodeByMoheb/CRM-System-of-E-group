@model IEnumerable<Sector_13_Welfare_Society___Digital_Management_System.Models.Booking>

@{
    ViewData["Title"] = "Pending Bank Transfers";
    Layout = "_DashboardLayout";
}

<div class="container-fluid py-4">
    <div class="d-flex align-items-center mb-3">
        <h2 class="mb-0"><i class="fas fa-university me-2"></i>Pending Bank Transfers</h2>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped align-middle">
                    <thead>
                        <tr>
                            <th>Booking #</th>
                            <th>Customer</th>
                            <th>Amount</th>
                            <th>Transaction ID</th>
                            <th>Submitted</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var b in Model)
                    {
                        <tr>
                            <td>@b.BookingNumber</td>
                            <td>
                                <div>@b.CustomerName</div>
                                <small class="text-muted">@b.CustomerPhone</small>
                            </td>
                            <td>@b.Currency @b.TotalAmount.ToString("N2")</td>
                            <td>@b.TransactionId</td>
                            <td>@(b.PaymentDate?.ToString("g") ?? b.BookingDate.ToString("g"))</td>
                            <td class="text-end">
                                <a class="btn btn-sm btn-primary" href="@Url.Action("ReviewBankTransfer", "Booking", new { id = b.Id })">
                                    <i class="fas fa-eye me-1"></i> Review
                                </a>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


