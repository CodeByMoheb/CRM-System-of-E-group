@model Sector_13_Welfare_Society___Digital_Management_System.Models.Booking

@{
    ViewData["Title"] = "Review Bank Transfer - " + Model.BookingNumber;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-receipt me-2"></i>Invoice</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <div><strong>Booking #:</strong> @Model.BookingNumber</div>
                            <div><strong>Date:</strong> @Model.BookingDate.ToString("MMMM dd, yyyy")</div>
                        </div>
                        <div class="text-end">
                            <div><strong>Customer:</strong> @Model.CustomerName</div>
                            <div><strong>Phone:</strong> @Model.CustomerPhone</div>
                            <div><strong>Email:</strong> @Model.CustomerEmail</div>
                        </div>
                    </div>
                    <hr>
                    <ul class="list-group list-group-flush">
                        @foreach (var item in Model.BookingItems)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <div class="fw-bold">@item.ServiceName</div>
                                    <small class="text-muted">@item.ServiceType</small>
                                </div>
                                <div>@item.Currency @item.TotalAmount.ToString("N2")</div>
                            </li>
                        }
                    </ul>
                    <div class="text-end mt-3">
                        <h4>Total: @Model.Currency @Model.TotalAmount.ToString("N2")</h4>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-warning">
                    <h5 class="mb-0"><i class="fas fa-university me-2"></i>Bank Transfer Details</h5>
                </div>
                <div class="card-body">
                    <div class="mb-2"><strong>Transaction ID:</strong> @Model.TransactionId</div>
                    <div class="mb-2"><strong>Status:</strong> @Model.PaymentStatus</div>
                    @if (!string.IsNullOrWhiteSpace(Model.Notes))
                    {
                        var lines = Model.Notes.Split('\n');
                        var receipt = lines.FirstOrDefault(l => l.Trim().StartsWith("Receipt:"));
                        <div class="mb-2"><strong>Notes:</strong>
                            <pre class="mb-0" style="white-space:pre-wrap">@Model.Notes</pre>
                        </div>
                        if (!string.IsNullOrWhiteSpace(receipt))
                        {
                            var parts = receipt.Split(':', 2);
                            var url = parts.Length == 2 ? parts[1].Trim() : null;
                            if (!string.IsNullOrWhiteSpace(url))
                            {
                                <div class="mt-3">
                                    <a class="btn btn-outline-secondary" href="@url" target="_blank"><i class="fas fa-file-image me-1"></i> View Receipt</a>
                                </div>
                            }
                        }
                    }
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-tasks me-2"></i>Actions</h5>
                </div>
                <div class="card-body">
                    <form method="post" action="@Url.Action("ApproveBankTransfer", "Booking", new { id = Model.Id })" class="mb-2">
                        <button type="submit" class="btn btn-success w-100"><i class="fas fa-check me-1"></i> Approve</button>
                    </form>
                    <form method="post" action="@Url.Action("RejectBankTransfer", "Booking", new { id = Model.Id })">
                        <div class="mb-2">
                            <label class="form-label">Rejection Reason (optional)</label>
                            <textarea name="reason" class="form-control" rows="3"></textarea>
                        </div>
                        <button type="submit" class="btn btn-danger w-100"><i class="fas fa-times me-1"></i> Reject</button>
                    </form>
                    <a href="@Url.Action("PendingBankTransfers", "Booking")" class="btn btn-outline-secondary w-100 mt-2"><i class="fas fa-arrow-left me-1"></i> Back</a>
                </div>
            </div>
        </div>
    </div>
</div>


