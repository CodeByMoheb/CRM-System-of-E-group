@model Sector_13_Welfare_Society___Digital_Management_System.Models.Service
@{
    var isEdit = Model?.Id > 0;
    ViewData["Title"] = isEdit ? "Edit Service" : "Create Service";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    var categories = ViewBag.ServiceCategories as List<Sector_13_Welfare_Society___Digital_Management_System.Models.ServiceCategory>;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <h4 class="page-title">@ViewData["Title"]</h4>
                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="/Dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("Index")">Services</a></li>
                        <li class="breadcrumb-item active">@ViewData["Title"]</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Service Information</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        @if (isEdit)
                        {
                            <input type="hidden" asp-for="Id" />
                        }

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Name" class="form-label">Service Name *</label>
                                    <input asp-for="Name" class="form-control" required placeholder="Enter service name">
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="ServiceType" class="form-label">Service Type *</label>
                                    <input asp-for="ServiceType" class="form-control" required placeholder="e.g., BSCI, ISO14001, etc.">
                                    <span asp-validation-for="ServiceType" class="text-danger"></span>
                                </div>
                            </div>
                        </div>


                        <div class="row">
                            <div class="col-md-3">
                                <div class="mb-3">
                                    <label class="form-label">Pricing Type</label>
                                    <input id="PricingType" type="text" class="form-control" value="Dynamic" readonly>
                                    <div class="form-text">All services use dynamic pricing based on workforce size and location.</div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="BasePrice" class="form-label">Base Price</label>
                                    <input asp-for="BasePrice" type="number" step="0.01" class="form-control" placeholder="Enter base price">
                                    <span asp-validation-for="BasePrice" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="mb-3">
                                    <label asp-for="Registration_fees" class="form-label">Registration Fees</label>
                                    <input asp-for="Registration_fees" type="number" step="0.01" class="form-control" placeholder="Enter Fees">
                                    <span asp-validation-for="Registration_fees" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="mb-3">
                                    <label asp-for="Currency" class="form-label">Currency</label>
                                    <select asp-for="Currency" class="form-select">
                                        <option value="USD">USD</option>
                                        <option value="BDT">BDT</option>
                                        <option value="EUR">EUR</option>
                                    </select>
                                    <span asp-validation-for="Currency" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter service description"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <div class="form-check mt-4">
                                        <input asp-for="IsActive" class="form-check-input" checked>
                                        <label asp-for="IsActive" class="form-check-label">
                                            Active Service
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center">
                            <!-- Left side: Back button -->
                            <a href="@Url.Action("Index")" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i> Back to Services
                            </a>

                            <!-- Right side: Submit and Clear buttons -->
                            <div>
                                <button type="submit" class="btn btn-primary me-2">
                                    <i class="fas fa-save me-1"></i> @(isEdit ? "Update Service" : "Create Service")
                                </button>
                                <a href="@Url.Action("Create")"
                                   class="btn"
                                   style="background-color:#c5ae0e;color:#212529">
                                    <i class="fas fa-eraser me-1"></i> Clear
                                </a>

                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>

        <!-- Sidebar Cards (Service Types & Pricing Types) -->
        <div class="col-lg-4">
            <div class="card mb-3">
                <div class="card-header"><h6 class="card-title mb-0">Service Types</h6></div>
                <div class="card-body">
                    <div class="service-types">
                        <div class="service-type-item mb-3"><strong>BSCI</strong><p class="text-muted small mb-0">Business Social Compliance Initiative audit services</p></div>
                        <div class="service-type-item mb-3"><strong>ISO 14001</strong><p class="text-muted small mb-0">Environmental Management System certification</p></div>
                        <div class="service-type-item mb-3"><strong>ISO 9001</strong><p class="text-muted small mb-0">Quality Management System certification</p></div>
                        <div class="service-type-item mb-3"><strong>ISO 45001</strong><p class="text-muted small mb-0">Occupational Health and Safety Management</p></div>
                        <div class="service-type-item"><strong>GOTS</strong><p class="text-muted small mb-0">Global Organic Textile Standard certification</p></div>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header"><h6 class="card-title mb-0">Pricing Types</h6></div>
                <div class="card-body">
                    <div class="pricing-types">
                        <div class="pricing-type-item mb-3"><strong>Fixed</strong><p class="text-muted small mb-0">Single price for the service</p></div>
                        <div class="pricing-type-item mb-3"><strong>Dynamic</strong><p class="text-muted small mb-0">Price varies based on configuration</p></div>
                        <div class="pricing-type-item mb-3"><strong>BSCI</strong><p class="text-muted small mb-0">BSCI-specific pricing with workforce size calculation</p></div>
                        <div class="pricing-type-item"><strong>Custom</strong><p class="text-muted small mb-0">Custom pricing logic</p></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const pricingTypeInput = document.getElementById('PricingType');
        const bsciFields = document.getElementById('bsciFields'); // optional BSCI fields container

        if (pricingTypeInput && bsciFields) {
            function toggleBSCIFields() {
                bsciFields.style.display = pricingTypeInput.value === 'BSCI' ? 'block' : 'none';
            }

            pricingTypeInput.addEventListener('change', toggleBSCIFields);
            toggleBSCIFields();
        }
    });
</script>
