@model IEnumerable<Sector_13_Welfare_Society___Digital_Management_System.Models.ServiceCategory>
@{
    ViewData["Title"] = "Manage Service Categories";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <h4 class="page-title">Manage Service Categories</h4>
                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="/Dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("Index")">Services</a></li>
                        <li class="breadcrumb-item active">Categories</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">Service Categories</h5>
                        <a href="@Url.Action("CreateCategory")" class="btn btn-primary">
                            <i class="fas fa-plus me-1"></i> Add Category
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Category Name</th>
                                        <th>Description</th>
                                        <th>Icon</th>
                                        <th>Services Count</th>
                                        <th>Order</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var category in Model)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@category.Name</strong>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(category.Description))
                                                {
                                                    <span>@category.Description</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">No description</span>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(category.IconClass))
                                                {
                                                    <i class="@category.IconClass text-primary"></i>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">No icon</span>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge bg-info">@category.Services.Count</span>
                                            </td>
                                            <td>
                                                <span class="badge bg-light text-dark">@category.DisplayOrder</span>
                                            </td>
                                            <td>
                                                @if (category.IsActive)
                                                {
                                                    <span class="badge bg-success">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">Inactive</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="@Url.Action("EditCategory", new { id = category.Id })" 
                                                       class="btn btn-sm btn-outline-primary" title="Edit">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <form asp-action="DeleteCategory" method="post" style="display: inline;" 
                                                          onsubmit="return confirm('Are you sure you want to delete this category?')">
                                                        <input type="hidden" name="id" value="@category.Id" />
                                                        <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-tags text-muted" style="font-size: 4rem;"></i>
                            <h4 class="text-muted mt-3">No Categories Found</h4>
                            <p class="text-muted">Start by creating your first service category.</p>
                            <a href="@Url.Action("CreateCategory")" class="btn btn-primary">
                                <i class="fas fa-plus me-1"></i> Add Category
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


