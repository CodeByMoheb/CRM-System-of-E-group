@model IEnumerable<Sector_13_Welfare_Society___Digital_Management_System.Models.Service>
@{
    ViewData["Title"] = "Manage Services";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <h4 class="page-title">Manage Services</h4>
                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "MemberDashboard")">Dashboard</a></li>
                        <li class="breadcrumb-item active">Services</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">Services</h5>
                        <div>
                            <a href="@Url.Action("Create")" class="btn btn-primary">
                                <i class="fas fa-plus me-1"></i> Add Service
                            </a>
                            <a href="@Url.Action("Categories")" class="btn btn-outline-secondary">
                                <i class="fas fa-tags me-1"></i> Manage Categories
                            </a>
                            <a href="@Url.Action("SeedData")" class="btn btn-success" onclick="return confirm('This will add sample services and categories. Continue?')">
                                <i class="fas fa-seedling me-1"></i> Seed Sample Data
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Service Name</th>
                                        <th>Category</th>
                                        <th>Type</th>
                                        <th>Pricing</th>
                                        <th>Price</th>
                                        <th>Status</th>
                                        <th>Order</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var service in Model)
                                    {
                                        <tr>
                                            <td>
                                                <div>
                                                    <strong>@service.Name</strong>
                                                    @if (!string.IsNullOrEmpty(service.Description))
                                                    {
                                                        <br><small class="text-muted">@service.Description</small>
                                                    }
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge bg-info">@service.ServiceCategory?.Name</span>
                                            </td>
                                            <td>
                                                <span class="badge bg-secondary">@service.ServiceType</span>
                                            </td>
                                            <td>
                                                <span class="badge bg-warning">Dynamic</span>
                                            </td>
                                            <td>
                                                @if (service.BasePrice.HasValue)
                                                {
                                                    <span>@service.Currency @service.BasePrice.Value.ToString("F2")</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Dynamic</span>
                                                }
                                            </td>
                                            <td>
                                                @if (service.IsActive)
                                                {
                                                    <span class="badge bg-success">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">Inactive</span>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge bg-light text-dark">@service.DisplayOrder</span>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="@Url.Action("Details", new { id = service.Id })" 
                                                       class="btn btn-sm btn-outline-info" title="View Details">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a href="@Url.Action("Edit", new { id = service.Id })" 
                                                       class="btn btn-sm btn-outline-primary" title="Edit">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a href="@Url.Action("Delete", new { id = service.Id })" 
                                                       class="btn btn-sm btn-outline-danger" title="Delete">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-tools text-muted" style="font-size: 4rem;"></i>
                            <h4 class="text-muted mt-3">No Services Found</h4>
                            <p class="text-muted">Start by creating your first service.</p>
                            <a href="@Url.Action("Create")" class="btn btn-primary">
                                <i class="fas fa-plus me-1"></i> Add Service
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
