<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
<style>
    body {
        font-family: 'Poppins', sans-serif;
        background: #f8f9fa;
        margin: 0;
        padding: 0;
    }

    .section-header {
        text-align: center;
        margin: 60px 0 30px;
    }

    .section-header h2 {
        font-size: 2.5rem;
        font-weight: 700;
        color: #2c3e50;
    }

    .section-header p {
        font-size: 1.1rem;
        color: #7f8c8d;
        max-width: 600px;
        margin: 0 auto;
    }

    .chairman-content {
        max-width: 520px;
        margin: 40px auto 60px auto;
        background: #fff;
        border-radius: 10px;
        box-shadow: 0 2px 12px rgba(44, 62, 80, 0.06);
        padding: 32px 32px 28px 32px;
    }

    .chairman-content h3 {
        color: #2563eb;
        font-size: 1.18rem;
        font-weight: 700;
        margin-bottom: 18px;
        margin-top: 28px;
    }

    .chairman-content h3:first-child {
        margin-top: 0;
    }

    .chairman-content p {
        font-size: 1.01rem;
        color: #222;
        margin-bottom: 12px;
        line-height: 1.6;
    }

    .chairman-signature {
        margin-top: 30px;
        font-style: italic;
        color: #2563eb;
    }

    /* Hero Section */
    .hero-section {
        background-image: url("https://res.cloudinary.com/ddl4hnmnz/image/upload/v1752642542/background_jomopz.gif");
        color: #fff;
        padding: 40px 20px 28px 20px;
        text-align: center;
        width: 100%;
        box-sizing: border-box;
        margin-top: 50px;
    }

    .hero-content {
        max-width: 900px;
        margin: 0 auto;
        
    }

    .hero-title {
        font-size: 2.2rem;
        font-weight: 700;
        margin-bottom: 12px;
        line-height: 1.2;
    }

    .hero-subtitle {
        font-size: 1.08rem;
        margin-bottom: 0;
        line-height: 1.5;
    }

    /* Chairman Intro Section - 3 Column Card Design */
    .chairman-intro {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        padding: 60px 20px;
        box-sizing: border-box;
    }

    .chairman-container {
        max-width: 1200px;
        margin: 0 auto;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
        gap: 30px;
        align-items: stretch;
    }

    /* First section - 2 column layout for Shusama */
    .chairman-intro:first-of-type .chairman-container {
        grid-template-columns: 1fr 1fr;
        align-items: center;
        gap: 40px;
    }

    .chairman-photo-section {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
    }

    .message-intro {
        display: flex;
        flex-direction: column;
        @* justify-content: center; *@
    }

    /* Increase text size for Shusama's message */
    .message-intro .greeting {
        font-size: 1.3rem;
        font-weight: 700;
    }

    .message-intro .intro-text {
        font-size: 1.3rem;
        line-height: 1.7;
    }

    .message-intro .quote-icon {
        font-size: 2.5rem;
    }

    .employee-card {
        background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1), 0 4px 12px rgba(0, 0, 0, 0.05);
        padding: 30px 25px;
        text-align: center;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        border: 1px solid rgba(255, 255, 255, 0.8);
        position: relative;
        overflow: hidden;
    }

    .employee-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(90deg, #3b82f6, #6366f1, #8b5cf6);
        transform: scaleX(0);
        transform-origin: left;
        transition: transform 0.4s ease;
    }

    .employee-card:hover {
        transform: translateY(-10px) scale(1.02);
        box-shadow: 0 20px 50px rgba(0, 0, 0, 0.15), 0 8px 20px rgba(59, 130, 246, 0.1);
    }

    .employee-card:hover::before {
        transform: scaleX(1);
    }

    .chairman-photo {
        width: 300px;
        height: 350px;
        object-fit: cover;
        border-radius: 15px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        margin: 0 auto 20px auto;
        transition: transform 0.3s ease;
        border: 3px solid rgba(59, 130, 246, 0.1);
    }

    .employee-card:hover .chairman-photo {
        transform: scale(1.05);
    }

    .chairman-name {
        font-weight: 700;
        color: #1e293b;
        font-size: 1.2rem;
        line-height: 1.3;
        margin-bottom: 8px;
    }

    .chairman-title {
        font-size: 1rem;
        color: #64748b;
        line-height: 1.4;
        margin-bottom: 20px;
        font-weight: 500;
    }

    .quote-icon {
        font-size: 2rem;
        color: #3b82f6;
        margin-bottom: 15px;
    }

    .greeting {
        font-weight: 600;
        color: #2563eb;
        margin-bottom: 12px;
        font-size: 1rem;
    }

    .intro-text {
        font-size: 0.95rem;
        color: #374151;
        line-height: 1.6;
       
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .hero-title {
            font-size: 1.8rem;
        }

        .hero-subtitle {
            font-size: 1rem;
        }

        .chairman-container {
            grid-template-columns: 1fr;
            gap: 25px;
        }

        /* First section responsive - stack on mobile */
        .chairman-intro:first-of-type .chairman-container {
            grid-template-columns: 1fr;
            gap: 30px;
        }

        .employee-card {
            padding: 25px 20px;
        }

        .chairman-photo {
            width: 150px;
            height: 170px;
        }

        .chairman-name {
            font-size: 1.1rem;
        }

        .chairman-title {
            font-size: 0.9rem;
        }

        .quote-icon {
            font-size: 1.8rem;
        }

        .intro-text {
            font-size: 0.9rem;
        }

        .chairman-content {
            margin: 30px 15px 50px 15px;
            padding: 25px 20px 20px 20px;
        }

        .chairman-content h3 {
            font-size: 1.1rem;
        }

        .chairman-content p {
            font-size: 0.95rem;
        }
    }

    @@media (max-width: 480px) {
        .hero-section {
            padding: 30px 15px 25px 15px;

        }

        .hero-title {
            font-size: 1.5rem;
        }

        .hero-subtitle {
            font-size: 0.9rem;
        }

        .chairman-intro {
            padding: 25px 15px 15px 15px;
        }

        .chairman-photo {
            width: 180px;
            height: 200px;
        }

        .chairman-name {
            font-size: 1rem;
        }

        .chairman-title {
            font-size: 0.9rem;
        }

        .quote-icon {
            font-size: 1.5rem;
        }

        .greeting {
            font-size: 0.95rem;
        }

        .intro-text {
            font-size: 0.95rem;
        }

        .chairman-content {
            margin: 25px 10px 40px 10px;
            padding: 20px 15px 15px 15px;
        }

        .chairman-content h3 {
            font-size: 1rem;
            margin-bottom: 15px;
            margin-top: 25px;
        }

        .chairman-content p {
            font-size: 0.9rem;
            margin-bottom: 10px;
        }

        .chairman-signature {
            margin-top: 25px;
            font-size: 0.9rem;
        }
    }

    @@media (max-width: 360px) {
        .hero-title {
            font-size: 1.3rem;
        }

        .hero-subtitle {
            font-size: 0.85rem;
        }

        .chairman-photo {
            width: 150px;
            height: 170px;
        }

        .chairman-name {
            font-size: 0.9rem;
        }

        .chairman-title {
            font-size: 0.8rem;
        }

        .quote-icon {
            font-size: 1.3rem;
        }

        .greeting {
            font-size: 0.9rem;
        }

        .intro-text {
            font-size: 0.9rem;
        }

        .chairman-content {
            margin: 20px 8px 35px 8px;
            padding: 18px 12px 12px 12px;
        }

        .chairman-content h3 {
            font-size: 0.95rem;
        }

        .chairman-content p {
            font-size: 0.85rem;
        }

        .chairman-signature {
            font-size: 0.85rem;
        }
    }

    /* Tablet specific adjustments */
    @@media (min-width: 769px) and (max-width: 1024px) {
        .chairman-container {
            gap: 30px;
        }

        .chairman-photo {
            width: 240px;
            height: 270px;
        }

        .chairman-content {
            max-width: 600px;
            margin: 35px auto 55px auto;
            padding: 30px 30px 25px 30px;
        }
    }

    /* Large screen adjustments */
    @@media (min-width: 1200px) {
        .chairman-content {
            max-width: 600px;
        }

        .hero-title {
            font-size: 2.5rem;
        }

        .hero-subtitle {
            font-size: 1.15rem;
        }
    }
</style>

