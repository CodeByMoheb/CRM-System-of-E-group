@model Sector_13_Welfare_Society___Digital_Management_System.Models.GalleryViewModel


@{
    ViewData["Title"] = "Gallery";
}

<style>
    .gallery-header {
        background-image: url('https://res.cloudinary.com/ddl4hnmnz/image/upload/v1752731322/tenor_cqqyue.gif');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        height: 220px;
        width: 100%;
        color: #ffffff;
        margin-bottom: 30px;
        position: relative;
        border-radius: 10px;
    }
    .gallery-header::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.4);
        z-index: 1;
        border-radius: inherit;
    }
    .gallery-header > * { position: relative; z-index: 2; }
    
    @@media (max-width: 768px) {
        .gallery-header { height: 150px; }
        .gallery-header h1 { font-size: 2rem !important; padding-top: 30px !important; }
    }
    @@media (max-width: 480px) {
        .gallery-header { height: 120px; }
        .gallery-header h1 { font-size: 1.5rem !important; padding-top: 20px !important; }
    }

    .container { margin-bottom: 50px; padding: 0 15px; }

    .gallery-nav {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-bottom: 30px;
        font-size: 18px;
        font-weight: 600;
        flex-wrap: wrap;
    }
    @@media (max-width: 768px) { .gallery-nav { gap: 15px; font-size: 16px; } }
    @@media (max-width: 480px) { .gallery-nav { gap: 12px; font-size: 14px; flex-direction: column; align-items: center; } }

    .gallery-nav .nav-link {
        color: #2d3e50;
        cursor: pointer;
        text-decoration: none;
        padding: 8px 16px;
        border-radius: 20px;
        transition: all 0.3s ease;
    }
    .gallery-nav .nav-link:hover { background-color: #f8f9fa; color: #00c86b; }
    .gallery-nav .active { color: #ffffff; background-color: #00c86b; border-bottom: none; }

    .gallery-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr); /* Always 3 columns */
    gap: 20px;
    max-width: 1200px;
    margin: 0 auto;
    }
    @@media (max-width: 992px) {
        .gallery-grid { grid-template-columns: repeat(2, 1fr); } /* 2 columns on tablets */
    }
    @@media (max-width: 576px) {
        .gallery-grid { grid-template-columns: 1fr; } /* 1 column on mobile */
    }

    .gallery-item {
        width: 100%; /* grid handles column width */
        height: 200px;
        overflow: hidden;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        background: #fff;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        cursor: pointer;
    }

        
        
    @@media (max-width: 768px) { .gallery-item { height: 180px; } }
    @@media (max-width: 480px) { .gallery-item { height: 200px; } }

    .gallery-item img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
        opacity: 0;
        animation: fadeIn 0.5s ease forwards;
    }

    .gallery-item:hover {
        transform: scale(1.05);
        box-shadow: 0 4px 16px rgba(0,0,0,0.15);
    }

    .gallery-item:hover img {
        transform: scale(1.1);
    }
   

    @@keyframes fadeIn { to { opacity: 1; } }

    /* Modal Styles */
    .image-modal {
        display: none;
        position: fixed;
        z-index: 9999;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.9);
        backdrop-filter: blur(5px);
        opacity: 0;
        transition: opacity 0.3s ease;
    }
    .image-modal.show { opacity: 1; }
    .modal-content {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%) scale(0.7);
        max-width: 90%;
        max-height: 90%;
        transition: transform 0.3s ease;
    }
    .image-modal.show .modal-content { transform: translate(-50%, -50%) scale(1); }
    .modal-image { width: 100%; height: auto; max-height: 80vh; object-fit: contain; border-radius: 8px; box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5); }
    .modal-close { position: absolute; top: 20px; right: 30px; color: #f1f1f1; font-size: 40px; font-weight: bold; cursor: pointer; transition: color 0.3s ease; z-index: 10000; }
    .modal-close:hover, .modal-close:focus { color: #bbb; text-decoration: none; }
    .modal-nav {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        background: rgba(255, 255, 255, 0.2);
        color: white;
        padding: 15px 10px;
        cursor: pointer;
        border-radius: 50%;
        font-size: 24px;
        transition: background 0.3s ease;
        backdrop-filter: blur(10px);
    }
    .modal-nav:hover { background: rgba(255, 255, 255, 0.3); }
    .modal-prev { left: 20px; }
    .modal-next { right: 20px; }
    .modal-caption {
        position: absolute;
        bottom: 20px;
        left: 50%;
        transform: translateX(-50%);
        color: white;
        text-align: center;
        background: rgba(0, 0, 0, 0.7);
        padding: 10px 20px;
        border-radius: 20px;
        font-size: 16px;
        backdrop-filter: blur(10px);
    }
    @@media (max-width: 768px) {
        .modal-close { top: 10px; right: 15px; font-size: 30px; }
        .modal-nav { padding: 10px 8px; font-size: 18px; }
        .modal-prev { left: 10px; }
        .modal-next { right: 10px; }
        .modal-caption { bottom: 10px; font-size: 14px; padding: 8px 15px; }
    }
</style>

<div class="container mt-2">
    <div class="gallery-header">
        <h1 class="text-center mb-2" style="font-size:3rem;font-weight:700;padding-top: 50px;">Gallery</h1>
        <nav aria-label="breadcrumb" class="mb-2">
            <ol class="breadcrumb justify-content-center">
                <li class="breadcrumb-item"><a href="/" style="color: #ffffff;">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page" style="color: #afafaf;">Gallery</li>
            </ol>
        </nav>
    </div>

    <!-- Dynamic Filter Buttons -->
    <div class="gallery-nav mb-4">
        <a class="nav-link active" data-filter="all">All</a>
        @foreach (var category in Model.Categories)
        {
            <a class="nav-link" data-filter="@category.Name!.ToLower()">@category.Name</a>
        }
    </div>

    <!-- Gallery Grid -->
    <div class="gallery-grid">
        @foreach (var img in Model.Galleries)
        {
            <div class="gallery-item" data-category="@img.Category?.Name?.ToLower()">
                <img src="@img.ImageUrl" alt="@img.Title" />
            </div>
        }
    </div>
</div>

<!-- Image Modal -->
<div id="imageModal" class="image-modal">
    <span class="modal-close">&times;</span>
    <div class="modal-content">
        <img class="modal-image" id="modalImage" src="" alt="" />
        <div class="modal-caption" id="modalCaption"></div>
    </div>
    <div class="modal-nav modal-prev" id="modalPrev">&#10094;</div>
    <div class="modal-nav modal-next" id="modalNext">&#10095;</div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(function () {
        let currentImageIndex = 0;
        let visibleImages = [];

        function updateVisibleImages() {
            visibleImages = $('.gallery-item:visible').toArray();
        }

        function openModal(src, alt, index) {
            currentImageIndex = index;
            $('#modalImage').attr('src', src);
            $('#modalCaption').text(alt);
            $('#imageModal').fadeIn(300).addClass('show');
            $('body').css('overflow', 'hidden');
        }

        function closeModal() {
            $('#imageModal').removeClass('show').fadeOut(300);
            $('body').css('overflow', 'auto');
        }

        function showImage(index) {
            if (index >= 0 && index < visibleImages.length) {
                currentImageIndex = index;
                const $img = $(visibleImages[index]).find('img');
                $('#modalImage').attr('src', $img.attr('src'));
                $('#modalCaption').text($img.attr('alt'));
            }
        }

        // Gallery filtering
        $('.gallery-nav .nav-link').click(function () {
            const filter = $(this).data('filter');
            $('.gallery-nav .nav-link').removeClass('active');
            $(this).addClass('active');

            if (filter === 'all') {
                $('.gallery-item').fadeIn(300);
            } else {
                $('.gallery-item').fadeOut(300);
                setTimeout(() => $('.gallery-item[data-category="' + filter + '"]').fadeIn(300), 300);
            }

            setTimeout(updateVisibleImages, 600);
        });

        // Open modal
        $('.gallery-item').click(function () {
            updateVisibleImages();
            const index = visibleImages.indexOf(this);
            const $img = $(this).find('img');
            openModal($img.attr('src'), $img.attr('alt'), index);
        });

        // Close modal
        $('.modal-close').click(closeModal);
        $('#imageModal').click(function (e) { if (e.target === this) closeModal(); });

        // Modal navigation
        $('#modalPrev').click(() => showImage(currentImageIndex > 0 ? currentImageIndex - 1 : visibleImages.length - 1));
        $('#modalNext').click(() => showImage(currentImageIndex < visibleImages.length - 1 ? currentImageIndex + 1 : 0));

        // Keyboard navigation
        $(document).keydown(function (e) {
            if ($('#imageModal').is(':visible')) {
                switch (e.keyCode) {
                    case 27: closeModal(); break; // Escape
                    case 37: $('#modalPrev').click(); break; // Left
                    case 39: $('#modalNext').click(); break; // Right
                }
            }
        });

        // Image load fade-in
        $('.gallery-item img').on('load', function () { $(this).css('opacity', '1'); }).on('error', function () { $(this).parent().hide(); });

        // Initial update
        updateVisibleImages();
    });
</script>
