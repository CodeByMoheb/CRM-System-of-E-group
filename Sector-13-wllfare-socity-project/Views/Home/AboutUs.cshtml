        }

        .story-image {
            width: 80%;
            min-width: 120px;
        }

        .foundation-card {
            padding: 24px 16px;
            border-radius: 10px;
        }

        .foundation-card:hover {
            transform: translateY(-2px);
        }

        .card-icon {
            font-size: 2.2rem;
            padding: 10px;
        }

        .value-card {
            padding: 24px 16px;
            border-radius: 12px;
        }

        .value-card:hover {
            transform: translateY(-4px) scale(1.005);
        }

        .value-icon {
