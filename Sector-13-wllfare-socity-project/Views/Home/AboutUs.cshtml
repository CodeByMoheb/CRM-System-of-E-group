        }
    }

    @@media (max-width: 360px) {
        .hero-title {
            font-size: 1.4rem;
        }

        .hero-subtitle {
            font-size: 0.9rem;
        }

        .section-title {
            font-size: 1.3rem;
        }

        .story-image {
            min-width: 200px;
        }

        .value-card {
            padding: 18px 10px;
        }

        .value-icon {
            font-size: 1.8rem;
        }
    }
</style>

