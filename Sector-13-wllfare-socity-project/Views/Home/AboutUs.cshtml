        transform: translateY(-8px);
        box-shadow: 0 20px 40px rgba(255, 0, 0, 0.4);
    }

    .foundation-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: rgba(255, 255, 255, 0.3);
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .foundation-card:hover::before {
        opacity: 1;
    }

    .card-icon {
