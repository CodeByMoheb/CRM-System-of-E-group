        background: rgba(255, 255, 255, 0.3);
    }

    .card-title {
        font-weight: 700;
        margin-bottom: 12px;
        font-size: 1.3rem;
        color: white;
        position: relative;
    }

    .card-text {
        color: rgba(255, 255, 255, 0.95);
        font-size: 1rem;
        line-height: 1.6;
        text-align: justify;
    }

    .values-container {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 24px;
        max-width: 1200px;
        margin: 0 auto;
    }

    .value-card {
