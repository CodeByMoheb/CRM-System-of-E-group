        align-items: center;
        justify-content: center;
        transition: all 0.4s ease;
        position: relative;
        z-index: 2;
    }

    .value-card:hover .value-icon {
        transform: scale(1.15) rotate(5deg);
        background: rgba(255, 255, 255, 0.3);
        box-shadow: 0 8px 25px rgba(255, 255, 255, 0.2);
    }

    .value-content {
        flex: 1;
        position: relative;
        z-index: 2;
    }

    .value-title {
        font-weight: 700;
        margin-bottom: 16px;
        font-size: 1.3rem;
        color: white;
        position: relative;
    }

    .value-title::after {
        content: '';
        position: absolute;
        bottom: -8px;
        left: 50%;
        transform: translateX(-50%);
        width: 40px;
        height: 3px;
        background: rgba(255, 255, 255, 0.4);
        border-radius: 2px;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .value-card:hover .value-title::after {
        opacity: 1;
    }

    .value-description {
        color: rgba(255, 255, 255, 0.95);
        font-size: 1rem;
        line-height: 1.6;
        text-align: center;
        position: relative;
        z-index: 2;
    }

