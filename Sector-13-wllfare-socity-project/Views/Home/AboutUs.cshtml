        box-shadow: 0 10px 40px rgba(44, 62, 80, 0.08);
        padding: 32px 24px;
        height: 100%;
        border: 1px solid rgba(255, 255, 255, 0.2);
        position: relative;
        overflow: hidden;
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        color: white;
    }

    /* Compassion Card - Orange Theme */
    .value-card:nth-child(1) {
        background: linear-gradient(135deg, #ff8c00 0%, #ffa500 100%);
    }

    .value-card:nth-child(1):hover {
        background: linear-gradient(135deg, #ff7700 0%, #ff9500 100%);
        transform: translateY(-12px) scale(1.02);
        box-shadow: 0 25px 50px rgba(255, 140, 0, 0.3);
    }

    /* Integrity Card - Blue Theme */
    .value-card:nth-child(2) {
        background: linear-gradient(135deg, #0080ff 0%, #0099ff 100%);
    }

    .value-card:nth-child(2):hover {
        background: linear-gradient(135deg, #0070ee 0%, #0088ee 100%);
        transform: translateY(-12px) scale(1.02);
        box-shadow: 0 25px 50px rgba(0, 128, 255, 0.3);
    }

    /* Community-Centered Card - Red Theme */
    .value-card:nth-child(3) {
        background: linear-gradient(135deg, #ff0000 0%, #ff3333 100%);
    }

    .value-card:nth-child(3):hover {
        background: linear-gradient(135deg, #ee0000 0%, #ff2222 100%);
        transform: translateY(-12px) scale(1.02);
        box-shadow: 0 25px 50px rgba(255, 0, 0, 0.3);
    }

    /* Impact-Driven Card - Green Theme */
    .value-card:nth-child(4) {
        background: linear-gradient(135deg, #00cc44 0%, #00dd55 100%);
    }

    .value-card:nth-child(4):hover {
        background: linear-gradient(135deg, #00bb33 0%, #00cc44 100%);
        transform: translateY(-12px) scale(1.02);
        box-shadow: 0 25px 50px rgba(0, 204, 68, 0.3);
    }

    /* Excellence Card - Orange Theme (Second Orange) */
    .value-card:nth-child(5) {
        background: linear-gradient(135deg, #ff6600 0%, #ff7722 100%);
    }

    .value-card:nth-child(5):hover {
        background: linear-gradient(135deg, #ee5500 0%, #ff6611 100%);
        transform: translateY(-12px) scale(1.02);
        box-shadow: 0 25px 50px rgba(255, 102, 0, 0.3);
    }

    /* Transparency Card - Blue Theme (Second Blue) */
    .value-card:nth-child(6) {
        background: linear-gradient(135deg, #0066cc 0%, #0077dd 100%);
    }

    .value-card:nth-child(6):hover {
        background: linear-gradient(135deg, #0055bb 0%, #0066cc 100%);
        transform: translateY(-12px) scale(1.02);
        box-shadow: 0 25px 50px rgba(0, 102, 204, 0.3);
    }

    .value-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: rgba(255, 255, 255, 0.3);
