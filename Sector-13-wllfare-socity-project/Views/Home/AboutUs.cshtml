@{
    ViewData["Title"] = "About Us";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Responsive styles for AboutUs page */
    .hero-section {
        background-image: url('https://res.cloudinary.com/drz65fsga/image/upload/v1757575987/eg_dzghie.png');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        opacity: 0.8;
        background-color: #0000009e;
        background-blend-mode: multiply;
        color: #ffffff;
        padding: 40px 20px 50px 20px;
        text-align: center;
        width: 100vw;
        margin-left: calc(-50vw + 50%);

    }

    .hero-content {
        max-width: 900px;
        margin: 0 auto;
        margin-top: 40px;
    }

    .hero-title {
        font-size: 2.8rem;
        font-weight: 700;
        margin-bottom: 18px;
        line-height: 1.2;
    }

    .hero-subtitle {
        font-size: 1.25rem;
        margin-bottom: 10px;
        line-height: 1.5;
    }

    .hero-location {
        margin-top: 18px;
        font-size: 1.1rem;
    }

    .content-section {
        background: #fff;
        padding: 40px 20px;
    }

    .content-container {
        max-width: 1200px;
        margin: 0 auto;
        display: flex;
        align-items: flex-start;
        gap: 32px;
        flex-wrap: wrap;
    }

    .text-column {
        flex: 1 1 350px;
        min-width: 320px;
        background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
        border-radius: 20px;
        padding: 32px 28px;
        box-shadow: 0 8px 32px rgba(44, 62, 80, 0.08);
        border: 1px solid rgba(37, 99, 235, 0.1);
        position: relative;
        overflow: hidden;
    }

    .text-column::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 5px;
        height: 100%;
        background: linear-gradient(180deg, #ff8c00, #0080ff, #ff0000, #00cc44);
        border-radius: 0 3px 3px 0;
    }

    .section-title {
        color: #1e293b;
        font-weight: 800;
        margin-bottom: 24px;
        font-size: 2.2rem;
        position: relative;
        padding-left: 20px;
        line-height: 1.2;
        text-align: center;
    }

    .section-title::after {
        content: '';
        position: absolute;
        bottom: -8px;
        left: 50%;
        transform: translateX(-50%);
        width: 60px;
        height: 4px;
        background: linear-gradient(90deg, #ff8c00, #0080ff);
        border-radius: 2px;
    }

    .section-text {
        font-size: 1.1rem;
        color: #475569;
        margin-bottom: 28px;
        line-height: 1.7;
        padding-left: 20px;
        font-weight: 400;
        text-align: justify;
    }

    .text-list {
        font-size: 1.08rem;
        color: #334155;
        padding-left: 20px;
    }

    .text-list ol {
        margin: 0;
        padding-left: 0;
        line-height: 1.7;
        counter-reset: item;
        list-style: none;
    }

    .text-list li {
        margin-bottom: 20px;
        padding: 16px 20px 16px 60px;
        background: linear-gradient(135deg, rgba(255, 255, 255, 0.8) 0%, rgba(248, 250, 252, 0.9) 100%);
        border-radius: 12px;
        border-left: 4px solid transparent;
        position: relative;
        transition: all 0.3s ease;
        counter-increment: item;
        box-shadow: 0 2px 8px rgba(44, 62, 80, 0.04);
    }

    .text-list li::before {
        content: counter(item);
        position: absolute;
        left: 20px;
        top: 50%;
        transform: translateY(-50%);
        width: 28px;
        height: 28px;
        background: linear-gradient(135deg, #ff8c00, #0080ff);
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        font-size: 0.9rem;
    }

    .text-list li:nth-child(odd) {
        border-left-color: #ff8c00;
    }

    .text-list li:nth-child(even) {
        border-left-color: #0080ff;
    }

    .text-list li:nth-child(3n) {
        border-left-color: #ff0000;
    }

    .text-list li:nth-child(4n) {
        border-left-color: #00cc44;
    }

    .text-list li:hover {
        transform: translateX(8px);
        box-shadow: 0 8px 25px rgba(44, 62, 80, 0.12);
        background: linear-gradient(135deg, rgba(255, 255, 255, 0.95) 0%, rgba(248, 250, 252, 1) 100%);
    }

    .text-list li strong {
        color: #1e293b;
        font-weight: 700;
        font-size: 1.05em;
    }

    .images-column {
        flex: 1 1 300px;
        min-width: 300px;
        display: flex;
        flex-direction: column;
        gap: 12px;
        justify-content: flex-start;
        align-items: center;
