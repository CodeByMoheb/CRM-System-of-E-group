<script>
    // Split Slider functionality (text left, image right)
    class SplitSlider {
        constructor() {
            this.textSlides = Array.from(document.querySelectorAll('.text-panel .text-slide'));
            this.imageSlides = Array.from(document.querySelectorAll('.image-panel .image-slide'));
            this.prevBtn = document.querySelector('.split-controls .prev-btn');
            this.nextBtn = document.querySelector('.split-controls .next-btn');
            this.dotsContainer = document.querySelector('.split-dots');
            this.current = 0;
            this.interval = null;
            this.touchStartX = 0;
            this.touchEndX = 0;

            console.log('SplitSlider initialized:', {
                textSlides: this.textSlides.length,
                imageSlides: this.imageSlides.length,
                prevBtn: !!this.prevBtn,
                nextBtn: !!this.nextBtn,
                dotsContainer: !!this.dotsContainer
            });

            this.init();
        }

        init() {
            if (this.textSlides.length === 0 || this.imageSlides.length === 0) {
                console.warn('No slides found for SplitSlider');
                return;
            }
            
            this.bindEvents();
            this.update();
            console.log('SplitSlider fully initialized');
        }

        bindEvents() {
            if (this.prevBtn) {
                this.prevBtn.addEventListener('click', (e) => {
                    e.preventDefault();
                    console.log('Previous button clicked');
                    this.stop();
                    this.prev();
                });
            }
            
            if (this.nextBtn) {
                this.nextBtn.addEventListener('click', (e) => {
                    e.preventDefault();
                    console.log('Next button clicked');
                    this.stop();
                    this.next();
                });
            }

            // Dot clicks
            if (this.dotsContainer) {
                this.dotsContainer.querySelectorAll('.dot').forEach((dot, i) => {
                    dot.addEventListener('click', (e) => {
                        e.preventDefault();
                        console.log('Dot clicked:', i);
                        this.stop();
                        this.go(i);
                    });
                });
            }
            
            // Touch events for mobile
            const split = document.querySelector('.split-slider');
            if (split) {
                let touchStartX = 0;
                let touchEndX = 0;
                
                split.addEventListener('touchstart', (e) => {
                    touchStartX = e.changedTouches[0].screenX;
                    this.stop();
                });
                
                split.addEventListener('touchend', (e) => {
                    touchEndX = e.changedTouches[0].screenX;
                    this.handleSwipe(touchStartX, touchEndX);
                });
            }
        }
        
        handleSwipe(startX, endX) {
            const swipeThreshold = 50;
            const diff = startX - endX;
            
            if (Math.abs(diff) > swipeThreshold) {
                if (diff > 0) {
                    console.log('Swipe left - next slide');
                    this.next();
                } else {
                    console.log('Swipe right - previous slide');
                    this.prev();
                }
            }
        }

        update() {
            const total = Math.min(this.textSlides.length, this.imageSlides.length);
            console.log('Updating slider to slide:', this.current, 'of', total);
            
            this.textSlides.forEach((el, idx) => {
                el.classList.toggle('active', idx === this.current);
            });
            
            this.imageSlides.forEach((el, idx) => {
                el.classList.toggle('active', idx === this.current);
            });

            const dots = this.dotsContainer ? Array.from(this.dotsContainer.querySelectorAll('.dot')) : [];
            dots.forEach((d, i) => {
                d.classList.toggle('active', i === this.current);
            });
        }

        next() {
            const total = Math.min(this.textSlides.length, this.imageSlides.length);
            this.current = (this.current + 1) % total;
            console.log('Moving to next slide:', this.current);
            this.update();
        }

        prev() {
            const total = Math.min(this.textSlides.length, this.imageSlides.length);
            this.current = (this.current - 1 + total) % total;
            console.log('Moving to previous slide:', this.current);
            this.update();
        }

        go(i) {
            const total = Math.min(this.textSlides.length, this.imageSlides.length);
            this.current = Math.max(0, Math.min(total - 1, i));
            console.log('Going to slide:', this.current);
            this.update();
        }

        start() {
            // Auto-slide disabled - slider will only change on manual interaction
            this.stop();
        }

        stop() {
            if (this.interval) {
                clearInterval(this.interval);
                this.interval = null;
            }
        }
    }

    // Navigation functionality
    class Navigation {
        constructor() {
            this.hamburger = document.querySelector('.hamburger');
            this.navMenu = document.querySelector('.nav-menu');
            this.navLinks = document.querySelectorAll('.nav-link, .dropdown-item'); // Include dropdown items

            this.init();
