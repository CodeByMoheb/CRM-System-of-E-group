    // Number Counter Animation
    class NumberCounter {
        constructor() {
            this.counters = document.querySelectorAll('.stat-card h3');
            this.animated = new Set();
            this.init();
        }

        init() {
            this.bindEvents();
            this.checkCounters();
        }

        bindEvents() {
            window.addEventListener('scroll', () => this.checkCounters());
            window.addEventListener('resize', () => this.checkCounters());
        }

        checkCounters() {
            this.counters.forEach(counter => {
                if (this.animated.has(counter)) return; // Don't re-animate

                const rect = counter.getBoundingClientRect();
                // Animate when counter is fully visible or just entered view
                const isVisible = (rect.top >= 0 && rect.bottom <= window.innerHeight) ||
                                  (rect.top < window.innerHeight && rect.bottom >= 0);

                if (isVisible) {
                    this.animateCounter(counter);
                    this.animated.add(counter);
                }
            });
        }

        animateCounter(counter) {
            const targetText = counter.textContent;
            const targetNumber = parseInt(targetText.replace(/\D/g, ''));
            const suffix = targetText.replace(/\d/g, '');

            let currentNumber = 0;
            const duration = 3000;
            const startTimestamp = performance.now();

            const animate = (currentTime) => {
                const elapsed = currentTime - startTimestamp;
                const progress = Math.min(elapsed / duration, 1); // Clamp between 0 and 1
                currentNumber = progress * targetNumber;

                counter.textContent = Math.floor(currentNumber) + suffix;

                if (progress < 1) {
                    requestAnimationFrame(animate);
                }
            };
            requestAnimationFrame(animate);
        }
    }

