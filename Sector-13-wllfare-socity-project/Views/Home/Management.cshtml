        box-shadow: 0 2px 8px rgba(0,123,255,0.08);
        letter-spacing: 0.5px;
        border: 1px solid #b6e0fe;
    }
    @@media (max-width: 768px) {
        .members-row {
            flex-direction: column;
            gap: 15px;
        }
    }
