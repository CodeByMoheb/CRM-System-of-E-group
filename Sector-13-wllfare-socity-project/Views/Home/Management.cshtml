    }

    .designation-member {
        background: linear-gradient(135deg, #6f42c1, #6610f2);
    }

    .members-row {
        display: flex;
        gap: 30px;
        margin-bottom: 30px;
        justify-content: center;
        flex-wrap: wrap;
    }
    .group-header {
        display: inline-block;
        text-align: center;
        font-size: 1.2rem;
        font-weight: 600;
        color: #007bff;
