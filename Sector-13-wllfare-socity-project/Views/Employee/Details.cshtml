@model Sector_13_Welfare_Society___Digital_Management_System.Models.Employee
@{
    ViewData["Title"] = "Employee Details";
    Layout = "_DashboardLayout";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-10 mx-auto">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-user"></i> Employee Details
                        <span class="badge @(Model.IsActive ? "bg-success" : "bg-danger") ms-2">
                            @(Model.IsActive ? "Active" : "Inactive")
                        </span>
                    </h3>
                </div>
                <div class="card-body">
                    
                    <!-- Employee ID and Login Info -->
                    <div class="alert alert-info mb-4">
                        <div class="row">
                            <div class="col-md-6">
                                <h6><i class="fas fa-id-card"></i> Employee ID</h6>
                                <p class="mb-0"><strong class="text-primary">@Model.EmployeeId</strong></p>
                            </div>
                            <div class="col-md-6">
                                <h6><i class="fas fa-key"></i> Login Information</h6>
                                <p class="mb-0">
                                    <small class="text-muted">Login with Employee ID and default password: <strong>123456</strong></small>
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <!-- Personal Information -->
                        <div class="col-md-6">
                            <div class="details-section mb-4">
                                <h5 class="section-title mb-3">
                                    <i class="fas fa-user"></i> Personal Information
                                </h5>
                                
                                <div class="detail-item">
                                    <label class="detail-label">Full Name</label>
                                    <p class="detail-value">@Model.Name</p>
                                </div>
                                
                                <div class="detail-item">
                                    <label class="detail-label">Email Address</label>
                                    <p class="detail-value">@(Model.Email ?? "Not provided")</p>
                                </div>
                                
                                <div class="detail-item">
                                    <label class="detail-label">Phone Number</label>
                                    <p class="detail-value">@(Model.Phone ?? "Not provided")</p>
                                </div>
                                
                                <div class="detail-item">
                                    <label class="detail-label">Address</label>
                                    <p class="detail-value">@(Model.Address ?? "Not provided")</p>
                                </div>
                                
                                <div class="detail-item">
                                    <label class="detail-label">Joining Date</label>
                                    <p class="detail-value">@Model.JoiningDate.ToString("dd MMMM, yyyy")</p>
                                </div>
                            </div>
                        </div>

                        <!-- Job Information -->
                        <div class="col-md-6">
                            <div class="details-section mb-4">
                                <h5 class="section-title mb-3">
                                    <i class="fas fa-briefcase"></i> Job Information
                                </h5>
                                
                                <div class="detail-item">
                                    <label class="detail-label">Role/Position</label>
                                    <p class="detail-value">@Model.Role</p>
                                </div>
                                
                                <div class="detail-item">
                                    <label class="detail-label">Department</label>
                                    <p class="detail-value">
                                        <span class="badge bg-secondary">
                                            @Model.Department
                                        </span>
                                    </p>
                                </div>
                                
                                <div class="detail-item">
                                    <label class="detail-label">Base Salary</label>
                                    <p class="detail-value">
                                        <strong class="text-success">@Model.BaseSalary.ToString("C")</strong>
                                    </p>
                                </div>
                                
                                <div class="detail-item">
                                    <label class="detail-label">Work Shift</label>
                                    <p class="detail-value">
                                        @if (Model.Shift != null)
                                        {
                                            <span class="badge bg-secondary">@Model.Shift.Name</span>
                                            <br>
                                            <small class="text-muted">
                                                @Model.Shift.StartTime.ToString("hh:mm tt") - @Model.Shift.EndTime.ToString("hh:mm tt")
                                            </small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">No shift assigned</span>
                                        }
                                    </p>
                                </div>
                                
                                <div class="detail-item">
                                    <label class="detail-label">Status</label>
                                    <p class="detail-value">
                                        <span class="badge @(Model.IsActive ? "bg-success" : "bg-danger")">
                                            @(Model.IsActive ? "Active" : "Inactive")
                                        </span>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- System Information -->
                    <div class="details-section mb-4">
                        <h5 class="section-title mb-3">
                            <i class="fas fa-info-circle"></i> System Information
                        </h5>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="detail-item">
                                    <label class="detail-label">Created On</label>
                                    <p class="detail-value">@Model.CreatedAt.ToString("dd MMMM, yyyy hh:mm tt")</p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="detail-item">
                                    <label class="detail-label">Last Updated</label>
                                    <p class="detail-value">
                                        @(Model.UpdatedAt?.ToString("dd MMMM, yyyy hh:mm tt") ?? "Never updated")
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="d-flex justify-content-between flex-wrap gap-2">
                        <div>
                            <a class="btn btn-secondary" href="@Url.Action("Index")">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                        </div>
                        <div class="btn-group" role="group">
                            <a href="@Url.Action("Edit", new { id = Model.Id })" 
                               class="btn btn-primary">
                                <i class="fas fa-edit"></i> Edit Employee
                            </a>
                            <button type="button" class="btn btn-warning" 
                                    onclick="resetPassword(@Model.Id, '@Model.EmployeeId')">
                                <i class="fas fa-key"></i> Reset Password
                            </button>
                            <button type="button" class="btn btn-danger" 
                                    onclick="deleteEmployee(@Model.Id, '@Model.Name')">
                                <i class="fas fa-trash"></i> Delete Employee
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Reset Password Confirmation Modal -->
<div class="modal fade" id="resetPasswordModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Reset Password</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to reset the password for employee "<span id="resetEmployeeName"></span>"?</p>
                <p class="text-warning"><small>The password will be reset to: <strong>123456</strong></small></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="resetPasswordForm" method="post" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-warning">Reset Password</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete Employee</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete the employee "<span id="employeeName"></span>"?</p>
                <p class="text-danger"><small>This action cannot be undone.</small></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="post" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .details-section {
        border-left: 4px solid #007bff;
        padding-left: 15px;
        margin-bottom: 1.5rem;
    }
    
    .section-title {
        color: #007bff;
        font-weight: 600;
        border-bottom: 1px solid #e9ecef;
        padding-bottom: 0.5rem;
    }
    
    .detail-item {
        margin-bottom: 1rem;
        padding-bottom: 0.5rem;
        border-bottom: 1px solid #f8f9fa;
    }
    
    .detail-item:last-child {
        border-bottom: none;
        margin-bottom: 0;
    }
    
    .detail-label {
        font-weight: 600;
        color: #495057;
        margin-bottom: 0.25rem;
        display: block;
        font-size: 0.9rem;
    }
    
    .detail-value {
        margin-bottom: 0;
        color: #212529;
        font-size: 1rem;
    }
    
    .card {
        border: none;
        border-radius: 10px;
    }
    
    .card-header {
        border-radius: 10px 10px 0 0 !important;
    }
    
    .alert-info {
        background-color: #e7f3ff;
        border-color: #b8daff;
        color: #0c5460;
    }
    
    .btn-group .btn {
        border-radius: 0;
    }
    
    .btn-group .btn:first-child {
        border-top-left-radius: 0.375rem;
        border-bottom-left-radius: 0.375rem;
    }
    
    .btn-group .btn:last-child {
        border-top-right-radius: 0.375rem;
        border-bottom-right-radius: 0.375rem;
    }
    
    @@media (max-width: 768px) {
        .btn-group {
            display: flex;
            flex-direction: column;
        }
        
        .btn-group .btn {
            border-radius: 0.375rem !important;
            margin-bottom: 0.5rem;
        }
        
        .btn-group .btn:last-child {
            margin-bottom: 0;
        }
    }
</style>

@section Scripts {
    <script>
        function resetPassword(employeeId, employeeName) {
            $('#resetEmployeeName').text(employeeName);
            $('#resetPasswordForm').attr('action', '@Url.Action("ResetPassword")/' + employeeId);
            
            var modal = new bootstrap.Modal(document.getElementById('resetPasswordModal'));
            modal.show();
        }

        function deleteEmployee(employeeId, employeeName) {
            $('#employeeName').text(employeeName);
            $('#deleteForm').attr('action', '@Url.Action("Delete")/' + employeeId);
            
            var modal = new bootstrap.Modal(document.getElementById('deleteModal'));
            modal.show();
        }
        
        // Add smooth scrolling for mobile users
        $(document).ready(function() {
            // Auto-scroll to top on page load for better UX
            window.scrollTo(0, 0);
        });
    </script>
}
