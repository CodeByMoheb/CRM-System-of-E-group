@model IEnumerable<Sector_13_Welfare_Society___Digital_Management_System.Models.Employee>

@{
    ViewData["Title"] = "Employee Management";
   Layout = "_DashboardLayout";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h4><i class="fas fa-users"></i> Employee Management</h4>
                    <div>
                        <form asp-controller="Database" asp-action="SeedShifts" method="post" style="display: inline;">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-info me-2" onclick="return confirm('This will create/update 3 shifts (8 hours each). Continue?')">
                                <i class="fas fa-clock"></i> Setup Shifts
                            </button>
                        </form>
                        <form asp-controller="Database" asp-action="SeedEmployeesToIdentity" method="post" style="display: inline;">
                            @Html.AntiForgeryToken()
                            @* <button type="submit" class="btn btn-warning me-2" onclick="return confirm('This will sync all employees to Identity for login access. Continue?')">
                                <i class="fas fa-sync"></i> Sync to Login System
                            </button> *@
                        </form>
                        <a href="@Url.Action("Create")" class="btn btn-light">
                            <i class="fas fa-plus"></i> Add New Employee
                        </a>
                    </div>
                </div>
                <div class="card-body">

                    @if (TempData["EmployeeCreated"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["EmployeeCreated"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["EmployeeUpdated"] != null)
                    {
                        <div class="alert alert-info alert-dismissible fade show" role="alert">
                            @TempData["EmployeeUpdated"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["EmployeeDeleted"] != null)
                    {
                        <div class="alert alert-warning alert-dismissible fade show" role="alert">
                            @TempData["EmployeeDeleted"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["PasswordReset"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["PasswordReset"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["SeedSummary"] != null)
                    {
                        <div class="alert alert-info alert-dismissible fade show" role="alert">
                            <i class="fas fa-info-circle me-2"></i>@TempData["SeedSummary"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Employee ID</th>
                                    <th>Name</th>
                                    <th>Role</th>
                                    <th>Department</th>
                                    <th>Shift</th>
                                    <th>Base Salary</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var employee in Model)
                                {
                                    <tr>
                                        <td>
                                            <strong class="text-primary">@employee.EmployeeId</strong>
                                            <br>
                                            <small class="text-muted">Default: 123456</small>
                                        </td>
                                        <td>@employee.Name</td>
                                        <td>@employee.Role</td>
                                        <td>
                                            <span class="badge bg-secondary">
                                                @employee.Department
                                            </span>
                                        </td>
                                        <td>@(employee.Shift?.Name ?? "No Shift")</td>
                                        <td>@employee.BaseSalary.ToString("C")</td>
                                        <td>
                                            <span class="badge @(employee.IsActive ? "bg-success" : "bg-danger")">
                                                @(employee.IsActive ? "Active" : "Inactive")
                                            </span>
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a href="@Url.Action("Details", new { id = employee.Id })" 
                                                   class="btn btn-sm btn-outline-info" title="View Details">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a href="@Url.Action("Edit", new { id = employee.Id })" 
                                                   class="btn btn-sm btn-outline-primary" title="Edit">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <button type="button" class="btn btn-sm btn-outline-warning" 
                                                        onclick="resetPassword(@employee.Id, '@employee.EmployeeId')" title="Reset Password">
                                                    <i class="fas fa-key"></i>
                                                </button>
                                                <button type="button" class="btn btn-sm btn-outline-danger" 
                                                        onclick="deleteEmployee(@employee.Id, '@employee.Name')" title="Delete">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    @if (!Model.Any())
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-users fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No employees found</h5>
                            <p class="text-muted">Add your first employee to get started</p>
                            <a href="@Url.Action("Create")" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Add New Employee
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Reset Password Confirmation Modal -->
<div class="modal fade" id="resetPasswordModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Reset Password</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to reset the password for employee "<span id="resetEmployeeName"></span>"?</p>
                <p class="text-warning"><small>The password will be reset to: <strong>123456</strong></small></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="resetPasswordForm" method="post" style="display: inline;">
                    <button type="submit" class="btn btn-warning">Reset Password</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete Employee</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete the employee "<span id="employeeName"></span>"?</p>
                <p class="text-danger"><small>This action cannot be undone.</small></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="post" style="display: inline;">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function resetPassword(employeeId, employeeName) {
            $('#resetEmployeeName').text(employeeName);
            $('#resetPasswordForm').attr('action', '@Url.Action("ResetPassword")/' + employeeId);
            
            var modal = new bootstrap.Modal(document.getElementById('resetPasswordModal'));
            modal.show();
        }

        function deleteEmployee(employeeId, employeeName) {
            $('#employeeName').text(employeeName);
            $('#deleteForm').attr('action', '@Url.Action("Delete")/' + employeeId);
            
            var modal = new bootstrap.Modal(document.getElementById('deleteModal'));
            modal.show();
        }
    </script>
} 