@{
    ViewData["Title"] = "Access Denied";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .access-denied-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 20px;
    }
    
    .access-denied-card {
        background: white;
        border-radius: 20px;
        padding: 50px;
        text-align: center;
        box-shadow: 0 20px 60px rgba(0,0,0,0.2);
        max-width: 500px;
        width: 100%;
    }
    
    .access-denied-icon {
        font-size: 5rem;
        color: #dc3545;
        margin-bottom: 30px;
        animation: pulse 2s infinite;
    }
    
    @@keyframes pulse {
        0% { transform: scale(1); }
        50% { transform: scale(1.1); }
        100% { transform: scale(1); }
    }
    
    .access-denied-title {
        font-size: 2.5rem;
        font-weight: 700;
        color: #333;
        margin-bottom: 20px;
    }
    
    .access-denied-subtitle {
        font-size: 1.2rem;
        color: #666;
        margin-bottom: 30px;
        line-height: 1.6;
    }
    
    .access-denied-message {
        background: #f8f9fa;
        border-left: 4px solid #dc3545;
        padding: 20px;
        border-radius: 8px;
        margin-bottom: 30px;
        text-align: left;
    }
    
    .access-denied-message h5 {
        color: #dc3545;
        font-weight: 600;
        margin-bottom: 10px;
    }
    
    .access-denied-message p {
        color: #666;
        margin: 0;
        line-height: 1.5;
    }
    
    .action-buttons {
        display: flex;
        gap: 15px;
        justify-content: center;
        flex-wrap: wrap;
    }
    
    .btn-custom {
        padding: 12px 30px;
        border-radius: 25px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }
    
    .btn-primary-custom {
        background: linear-gradient(135deg, #007bff, #0056b3);
        color: white;
    }
    
    .btn-primary-custom:hover {
        background: linear-gradient(135deg, #0056b3, #004085);
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0,123,255,0.3);
    }
    
    .btn-secondary-custom {
        background: #6c757d;
        color: white;
    }
    
    .btn-secondary-custom:hover {
        background: #545b62;
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(108,117,125,0.3);
    }
    
    .btn-outline-custom {
        background: transparent;
        color: #007bff;
        border: 2px solid #007bff;
    }
    
    .btn-outline-custom:hover {
        background: #007bff;
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0,123,255,0.3);
    }
    
    .help-section {
        margin-top: 40px;
        padding-top: 30px;
        border-top: 1px solid #e9ecef;
    }
    
    .help-title {
        font-size: 1.1rem;
        font-weight: 600;
        color: #333;
        margin-bottom: 15px;
    }
    
    .help-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }
    
    .help-list li {
        padding: 8px 0;
        color: #666;
        display: flex;
        align-items: center;
        gap: 10px;
    }
    
    .help-list li i {
        color: #28a745;
        width: 16px;
    }
    
    @@media (max-width: 768px) {
        .access-denied-card {
            padding: 30px 20px;
        }
        
        .access-denied-title {
            font-size: 2rem;
        }
        
        .access-denied-subtitle {
            font-size: 1rem;
        }
        
        .action-buttons {
            flex-direction: column;
            align-items: center;
        }
        
        .btn-custom {
            width: 100%;
            max-width: 250px;
        }
    }
</style>

<div class="access-denied-container">
    <div class="access-denied-card">
        <div class="access-denied-icon">
            <i class="fas fa-lock"></i>
        </div>
        
        <h1 class="access-denied-title">Access Denied</h1>
        
        <p class="access-denied-subtitle">
            You don't have permission to access this resource.
        </p>
        
        <div class="access-denied-message">
            <h5><i class="fas fa-exclamation-triangle me-2"></i>What happened?</h5>
            <p>
                The system has denied access to the requested page or resource. This could be due to insufficient permissions, 
                session timeout, or security restrictions.
            </p>
        </div>
        
        <div class="action-buttons">
            @if (!string.IsNullOrEmpty(ViewData["ReturnUrl"] as string))
            {
                <a href="@ViewData["ReturnUrl"]" class="btn-custom btn-outline-custom">
                    <i class="fas fa-arrow-left"></i>
                    Go Back
                </a>
            }
            
            <a href="@Url.Action("Index", "Home")" class="btn-custom btn-primary-custom">
                <i class="fas fa-home"></i>
                Go to Home
            </a>
            
            <a href="@Url.Action("Login", "Account")" class="btn-custom btn-secondary-custom">
                <i class="fas fa-sign-in-alt"></i>
                Login Again
            </a>
        </div>
        
        <div class="help-section">
            <h5 class="help-title">Need Help?</h5>
            <ul class="help-list">
                <li>
                    <i class="fas fa-check"></i>
                    Make sure you're logged in with the correct account
                </li>
                <li>
                    <i class="fas fa-check"></i>
                    Check if your session hasn't expired
                </li>
                <li>
                    <i class="fas fa-check"></i>
                    Contact administrator if you believe this is an error
                </li>
                <li>
                    <i class="fas fa-check"></i>
                    Try refreshing the page or logging in again
                </li>
            </ul>
        </div>
    </div>
</div>

<script>
    // Auto-redirect after 30 seconds if return URL is available
    @if (!string.IsNullOrEmpty(ViewData["ReturnUrl"] as string))
    {
        <text>
        setTimeout(function() {
            if (confirm('Would you like to go back to the previous page?')) {
                window.location.href = '@ViewData["ReturnUrl"]';
            }
        }, 30000);
        </text>
    }
</script>
