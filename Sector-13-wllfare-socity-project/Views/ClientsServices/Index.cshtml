@model IEnumerable<ClientsServices>
@{
    ViewData["Title"] = "Client Services";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold text-primary">Client Services</h2>
        <a asp-action="AddClientService" class="btn btn-success">
            <i class="fas fa-plus-circle me-1"></i> Add New Service
        </a>
    </div>

    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Title</th>
                <th>Description</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    <td>
                        <img src="@(string.IsNullOrEmpty(item.ExistingImageUrl) ? "/photos/default.png" : item.ExistingImageUrl)"
                             class="rounded shadow-sm"
                             style="height:70px; width:70px; object-fit:cover; border:1px solid #ddd;"
                             alt="@item.Title" />
                    </td>
                    <td>
                        <a asp-action="EditClientService" asp-route-id="@item.Id" class="btn btn-sm btn-info me-1">
                            <i class="fas fa-edit"></i> Edit
                        </a>

                        <form asp-action="DeleteClientService" asp-route-id="@item.Id" method="post" class="d-inline"
                              onsubmit="return confirm('Are you sure you want to delete this service?');">
                            <button type="submit" class="btn btn-sm btn-danger">
                                <i class="fas fa-trash-alt"></i> Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>
