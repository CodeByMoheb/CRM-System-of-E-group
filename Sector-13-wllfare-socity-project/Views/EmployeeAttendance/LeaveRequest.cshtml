@model Leave
@{
    ViewData["Title"] = "Leave Request";
    Layout = "_DashboardLayout";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-secondary">
                        <i class="fas fa-calendar-plus me-2"></i>Submit Leave Request
                    </h6>
                    <span class="badge bg-info">@ViewBag.Employee?.EmployeeId</span>
                </div>
                <div class="card-body">
                    <form asp-action="LeaveRequest" asp-controller="EmployeeAttendance" method="post">
                        @Html.AntiForgeryToken()
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="LeaveType" class="form-label">Leave Type *</label>
                                <select asp-for="LeaveType" class="form-select" required>
                                    <option value="">Select Leave Type</option>
                                    <option value="Casual">Casual Leave</option>
                                    <option value="Sick">Sick Leave</option>
                                    <option value="Paid">Paid Leave</option>
                                    <option value="Unpaid">Unpaid Leave</option>
                                </select>
                                <span asp-validation-for="LeaveType" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="NumberOfDays" class="form-label">Number of Days *</label>
                                <input asp-for="NumberOfDays" type="number" class="form-control" min="1" max="30" required />
                                <span asp-validation-for="NumberOfDays" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="StartDate" class="form-label">Start Date *</label>
                                <input asp-for="StartDate" type="date" class="form-control" required />
                                <span asp-validation-for="StartDate" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="EndDate" class="form-label">End Date *</label>
                                <input asp-for="EndDate" type="date" class="form-control" required />
                                <span asp-validation-for="EndDate" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Reason" class="form-label">Reason for Leave *</label>
                            <textarea asp-for="Reason" class="form-control" rows="4" placeholder="Please provide a detailed reason for your leave request..." required></textarea>
                            <span asp-validation-for="Reason" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Member", "Dashboard")" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>Back to Dashboard
                            </a>
                            <button type="submit" class="btn btn-primary" id="submitBtn">
                                <i class="fas fa-paper-plane me-1"></i>Submit Request
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Leave Policy Information -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-info">
                        <i class="fas fa-info-circle me-2"></i>Leave Policy Information
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="text-primary">Casual Leave</h6>
                            <p class="text-muted small">Short-term personal leave, usually 1-3 days. Requires prior approval.</p>
                            
                            <h6 class="text-primary">Sick Leave</h6>
                            <p class="text-muted small">Medical leave with doctor's certificate. May require documentation.</p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-primary">Paid Leave</h6>
                            <p class="text-muted small">Annual leave with full salary. Counts as working days for salary calculation.</p>
                            
                            <h6 class="text-primary">Unpaid Leave</h6>
                            <p class="text-muted small">Leave without pay. Reduces salary calculation. Use sparingly.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            // Add form submission debugging and loading state
            $('form').on('submit', function(e) {
                console.log('Form submitted');
                console.log('Leave Type:', $('#LeaveType').val());
                console.log('Start Date:', $('#StartDate').val());
                console.log('End Date:', $('#EndDate').val());
                console.log('Number of Days:', $('#NumberOfDays').val());
                console.log('Reason:', $('#Reason').val());
                
                // Add loading state to submit button
                var submitBtn = $('#submitBtn');
                submitBtn.prop('disabled', true);
                submitBtn.html('<i class="fas fa-spinner fa-spin me-1"></i>Submitting...');
            });
            
            // Auto-calculate number of days when dates change
            $('#StartDate, #EndDate').on('change', function() {
                var startDate = $('#StartDate').val();
                var endDate = $('#EndDate').val();
                
                if (startDate && endDate) {
                    var start = new Date(startDate);
                    var end = new Date(endDate);
                    
                    if (end >= start) {
                        var diffTime = Math.abs(end - start);
                        var diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24)) + 1;
                        $('#NumberOfDays').val(diffDays);
                    } else {
                        $('#NumberOfDays').val('');
                        alert('End date must be after start date');
                        $('#EndDate').val('');
                    }
                }
            });

            // Set minimum date to today
            var today = new Date().toISOString().split('T')[0];
            $('#StartDate').attr('min', today);
            $('#EndDate').attr('min', today);
        });
    </script>
}
