@model List<Leave>
@{
    ViewData["Title"] = "My Leave Requests";
    Layout = "_DashboardLayout";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-secondary">
                        <i class="fas fa-calendar-check me-2"></i>My Leave Requests
                    </h6>
                    <div>
                        <span class="badge bg-info me-2">@ViewBag.Employee?.EmployeeId</span>
                        <a href="@Url.Action("LeaveRequest", "Dashboard")" class="btn btn-primary btn-sm">
                            <i class="fas fa-plus me-1"></i>New Request
                        </a>
                        <button type="button" class="btn btn-outline-secondary btn-sm ms-2" data-bs-toggle="modal" data-bs-target="#changePasswordModal">
                            <i class="fas fa-key me-1"></i>Change Password
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
                    }
                    @if (TempData["PasswordChangeStatus"] != null)
                    {
                        <div class="alert alert-info small">@TempData["PasswordChangeStatus"]</div>
                    }
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered table-striped">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Leave Type</th>
                                        <th>Start Date</th>
                                        <th>End Date</th>
                                        <th>Days</th>
                                        <th>Reason</th>
                                        <th>Status</th>
                                        <th>Applied On</th>
                                        <th>Approval Details</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var leave in Model)
                                    {
                                        <tr class="@(leave.ApprovalStatus == "Approved" ? "table-success" : 
                                                   leave.ApprovalStatus == "Rejected" ? "table-danger" : "table-warning")">
                                            <td>
                                                <span class="badge @(leave.LeaveType == "Casual" ? "bg-info" : 
                                                                   leave.LeaveType == "Sick" ? "bg-warning" : 
                                                                   leave.LeaveType == "Paid" ? "bg-success" : "bg-danger")">
                                                    @leave.LeaveType
                                                </span>
                                            </td>
                                            <td>@leave.StartDate.ToString("dd/MM/yyyy")</td>
                                            <td>@leave.EndDate.ToString("dd/MM/yyyy")</td>
                                            <td>
                                                <span class="badge bg-secondary">@leave.NumberOfDays day(s)</span>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(leave.Reason))
                                                {
                                                    <small>@leave.Reason</small>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge @(leave.ApprovalStatus == "Approved" ? "bg-success" : 
                                                                   leave.ApprovalStatus == "Rejected" ? "bg-danger" : "bg-warning")">
                                                    @leave.ApprovalStatus
                                                </span>
                                            </td>
                                            <td>
                                                <small class="text-muted">@leave.CreatedAt.ToString("dd/MM/yyyy HH:mm")</small>
                                            </td>
                                            <td>
                                                @if (leave.ApprovalStatus == "Approved" || leave.ApprovalStatus == "Rejected")
                                                {
                                                    <div>
                                                        <small class="text-muted">
                                                            <strong>@leave.ApprovalStatus by:</strong> @(leave.ApprovedBy?.UserName ?? "Unknown")
                                                        </small>
                                                        <br />
                                                        <small class="text-muted">
                                                            <strong>Date:</strong> @(leave.ApprovalDate?.ToString("dd/MM/yyyy") ?? "-")
                                                        </small>
                                                        @if (!string.IsNullOrEmpty(leave.ApprovalRemarks))
                                                        {
                                                            <br />
                                                            <small class="text-muted">
                                                                <strong>Remarks:</strong> @leave.ApprovalRemarks
                                                            </small>
                                                        }
                                                    </div>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Pending approval</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Summary -->
                        <div class="row mt-4">
                            <div class="col-md-3">
                                <div class="card bg-warning text-white">
                                    <div class="card-body text-center">
                                        <h5>@Model.Count(l => l.ApprovalStatus == "Pending")</h5>
                                        <small>Pending</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-success text-white">
                                    <div class="card-body text-center">
                                        <h5>@Model.Count(l => l.ApprovalStatus == "Approved")</h5>
                                        <small>Approved</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-danger text-white">
                                    <div class="card-body text-center">
                                        <h5>@Model.Count(l => l.ApprovalStatus == "Rejected")</h5>
                                        <small>Rejected</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-info text-white">
                                    <div class="card-body text-center">
                                        <h5>@Model.Sum(l => l.NumberOfDays)</h5>
                                        <small>Total Days</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No leave requests found</h5>
                            <p class="text-muted">You haven't submitted any leave requests yet.</p>
                            <a href="@Url.Action("LeaveRequest", "Dashboard")" class="btn btn-primary">
                                <i class="fas fa-plus me-1"></i>Submit Your First Request
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Change Password Modal -->
<div class="modal fade" id="changePasswordModal" tabindex="-1" aria-labelledby="changePasswordLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content bg-white">
            <div class="modal-header">
                <h5 class="modal-title" id="changePasswordLabel"><i class="fas fa-key me-2"></i>Change Password</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-controller="EmployeeAttendance" asp-action="ChangePassword" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="CurrentPassword" class="form-label">Current Password</label>
                        <input type="password" class="form-control" id="CurrentPassword" name="CurrentPassword" required />
                    </div>
                    <div class="mb-3">
                        <label for="NewPassword" class="form-label">New Password</label>
                        <input type="password" class="form-control" id="NewPassword" name="NewPassword" minlength="6" required />
                        <div class="form-text">Use at least 6 characters with a mix of letters and numbers.</div>
                    </div>
                    <div class="mb-3">
                        <label for="ConfirmPassword" class="form-label">Confirm New Password</label>
                        <input type="password" class="form-control" id="ConfirmPassword" name="ConfirmPassword" minlength="6" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success"><i class="fas fa-save me-1"></i>Update Password</button>
                </div>
            </form>
        </div>
    </div>
</div>
