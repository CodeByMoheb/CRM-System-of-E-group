@model IEnumerable<Sector_13_Welfare_Society___Digital_Management_System.Models.Shift>

@{
    ViewData["Title"] = "Shift Management";
    Layout = "_DashboardLayout";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h4><i class="fas fa-clock"></i> Shift Management</h4>
                    <div class="btn-group" role="group">
                        <a href="@Url.Action("Create")" class="btn btn-light">
                            <i class="fas fa-plus"></i> Add New Shift
                        </a>
                        <a href="@Url.Action("BulkCreate")" class="btn btn-outline-light">
                            <i class="fas fa-plus-circle"></i> Bulk Create
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (TempData["ShiftCreated"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["ShiftCreated"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["ShiftUpdated"] != null)
                    {
                        <div class="alert alert-info alert-dismissible fade show" role="alert">
                            @TempData["ShiftUpdated"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["ShiftDeleted"] != null)
                    {
                        <div class="alert alert-warning alert-dismissible fade show" role="alert">
                            @TempData["ShiftDeleted"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["ShiftDeleteError"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ShiftDeleteError"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Shift Name</th>
                                    <th>Start Time</th>
                                    <th>End Time</th>
                                    <th>Duration</th>
                                    <th>Description</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var shift in Model)
                                {
                                    <tr>
                                        <td><strong>@shift.Name</strong></td>
                                        <td>@string.Format("{0:hh\\:mm}", shift.StartTime)</td>
                                        <td>@string.Format("{0:hh\\:mm}", shift.EndTime)</td>
                                        <td>
                                            @{
                                                var duration = shift.EndTime - shift.StartTime;
                                                if (duration.TotalHours < 0)
                                                {
                                                    duration = duration.Add(TimeSpan.FromHours(24));
                                                }
                                            }
                                            <span class="badge bg-info">@duration.ToString(@"hh\:mm")</span>
                                        </td>
                                        <td>@(shift.Description ?? "-")</td>
                                        <td>
                                            <span class="badge @(shift.IsActive ? "bg-success" : "bg-danger")">
                                                @(shift.IsActive ? "Active" : "Inactive")
                                            </span>
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a href="@Url.Action("Edit", new { id = shift.ShiftId })" 
                                                   class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <button type="button" class="btn btn-sm btn-outline-danger" 
                                                        onclick="deleteShift(@shift.ShiftId, '@shift.Name')">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    @if (!Model.Any())
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-clock fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No shifts found</h5>
                            <p class="text-muted">Create your first shift to get started</p>
                            <a href="@Url.Action("Create")" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Add New Shift
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Quick Templates Modal -->
<div class="modal fade" id="templateModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Quick Shift Templates</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="row" id="templateContainer">
                    <!-- Templates will be loaded here -->
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete Shift</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete the shift "<span id="shiftName"></span>"?</p>
                <p class="text-danger"><small>This action cannot be undone.</small></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="post" style="display: inline;">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function deleteShift(shiftId, shiftName) {
            $('#shiftName').text(shiftName);
            $('#deleteForm').attr('action', '@Url.Action("Delete")/' + shiftId);
            
            var modal = new bootstrap.Modal(document.getElementById('deleteModal'));
            modal.show();
        }

        $(document).ready(function() {
            // Template button click
            $('#templateBtn').click(function() {
                loadTemplates();
                var modal = new bootstrap.Modal(document.getElementById('templateModal'));
                modal.show();
            });

            function loadTemplates() {
                $.get('@Url.Action("Templates")', function(templates) {
                    var container = $('#templateContainer');
                    container.empty();

                    templates.forEach(function(template, index) {
                        var templateCard = `
                            <div class="col-md-6 mb-3">
                                <div class="card h-100">
                                    <div class="card-body">
                                        <h6 class="card-title">${template.name}</h6>
                                        <p class="card-text">
                                            <strong>Time:</strong> ${template.startTime} - ${template.endTime}<br>
                                            <strong>Description:</strong> ${template.description}
                                        </p>
                                        <button type="button" class="btn btn-primary btn-sm" onclick="createFromTemplate('${template.name}', '${template.startTime}', '${template.endTime}', '${template.description}')">
                                            <i class="fas fa-plus"></i> Create This Shift
                                        </button>
                                    </div>
                                </div>
                            </div>
                        `;
                        container.append(templateCard);
                    });
                });
            }

            window.createFromTemplate = function(name, startTime, endTime, description) {
                var form = $('<form>', {
                    method: 'POST',
                    action: '@Url.Action("CreateFromTemplate")'
                });

                form.append($('<input>', {
                    type: 'hidden',
                    name: '__RequestVerificationToken',
                    value: $('input[name="__RequestVerificationToken"]').val()
                }));

                form.append($('<input>', {
                    type: 'hidden',
                    name: 'templateName',
                    value: name
                }));

                form.append($('<input>', {
                    type: 'hidden',
                    name: 'startTime',
                    value: startTime
                }));

                form.append($('<input>', {
                    type: 'hidden',
                    name: 'endTime',
                    value: endTime
                }));

                form.append($('<input>', {
                    type: 'hidden',
                    name: 'description',
                    value: description
                }));

                $('body').append(form);
                form.submit();
            };
        });
    </script>
}
