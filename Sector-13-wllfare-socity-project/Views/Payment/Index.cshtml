@{
    ViewData["Title"] = "Payment Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .payment-dashboard {
        background: #f8f9fa;
        min-height: 100vh;
        padding: 20px;
    }
    
    .dashboard-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 30px;
        border-radius: 15px;
        margin-bottom: 30px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    }
    
    .dashboard-title {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 10px;
    }
    
    .dashboard-subtitle {
        font-size: 1.1rem;
        opacity: 0.9;
    }
    
    .quick-actions {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
    }
    
    .action-card {
        background: white;
        border-radius: 15px;
        padding: 25px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.08);
        border-left: 5px solid #007bff;
        transition: all 0.3s ease;
        text-decoration: none;
        color: inherit;
    }
    
    .action-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 30px rgba(0,0,0,0.15);
        text-decoration: none;
        color: inherit;
    }
    
    .action-card.settings {
        border-left-color: #28a745;
    }
    
    .action-card.history {
        border-left-color: #17a2b8;
    }
    
    .action-card.approvals {
        border-left-color: #ffc107;
    }
    
    .action-card.ssl {
        border-left-color: #dc3545;
    }
    
    .action-icon {
        font-size: 2.5rem;
        margin-bottom: 15px;
        color: #007bff;
    }
    
    .action-card.settings .action-icon {
        color: #28a745;
    }
    
    .action-card.history .action-icon {
        color: #17a2b8;
    }
    
    .action-card.approvals .action-icon {
        color: #ffc107;
    }
    
    .action-card.ssl .action-icon {
        color: #dc3545;
    }
    
    .action-title {
        font-size: 1.3rem;
        font-weight: 600;
        margin-bottom: 10px;
        color: #333;
    }
    
    .action-description {
        color: #666;
        font-size: 0.95rem;
        line-height: 1.5;
    }
    
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
    }
    
    .stat-card {
        background: white;
        padding: 20px;
        border-radius: 10px;
        text-align: center;
        box-shadow: 0 3px 10px rgba(0,0,0,0.1);
    }
    
    .stat-number {
        font-size: 2rem;
        font-weight: 700;
        color: #333;
        margin-bottom: 5px;
    }
    
    .stat-label {
        color: #666;
        font-size: 0.9rem;
    }
    
    .recent-activity {
        background: white;
        border-radius: 15px;
        padding: 25px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.08);
    }
    
    .activity-title {
        font-size: 1.5rem;
        font-weight: 600;
        margin-bottom: 20px;
        color: #333;
    }
    
    .activity-item {
        display: flex;
        align-items: center;
        padding: 15px 0;
        border-bottom: 1px solid #e9ecef;
    }
    
    .activity-item:last-child {
        border-bottom: none;
    }
    
    .activity-icon {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 15px;
        font-size: 1.2rem;
        color: white;
    }
    
    .activity-icon.success {
        background: #28a745;
    }
    
    .activity-icon.pending {
        background: #ffc107;
    }
    
    .activity-icon.error {
        background: #dc3545;
    }
    
    .activity-content {
        flex: 1;
    }
    
    .activity-text {
        font-weight: 500;
        color: #333;
        margin-bottom: 5px;
    }
    
    .activity-time {
        font-size: 0.85rem;
        color: #666;
    }
    
    @@media (max-width: 768px) {
        .quick-actions {
            grid-template-columns: 1fr;
        }
        
        .stats-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }
</style>

<div class="payment-dashboard">
    <div class="dashboard-header">
        <h1 class="dashboard-title">
            <i class="fas fa-credit-card me-3"></i>
            Payment Dashboard
        </h1>
        <p class="dashboard-subtitle">Manage payments, settings, and transactions from one central location</p>
    </div>

    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-number">0</div>
            <div class="stat-label">Total Payments</div>
        </div>
        <div class="stat-card">
            <div class="stat-number">0</div>
            <div class="stat-label">Pending Approvals</div>
        </div>
        <div class="stat-card">
            <div class="stat-number">$0</div>
            <div class="stat-label">Total Revenue</div>
        </div>
        <div class="stat-card">
            <div class="stat-number">0</div>
            <div class="stat-label">This Month</div>
        </div>
    </div>

    <div class="quick-actions">
        <a href="@Url.Action("Settings", "Payment")" class="action-card settings">
            <div class="action-icon">
                <i class="fas fa-cog"></i>
            </div>
            <div class="action-title">Payment Settings</div>
            <div class="action-description">
                Configure SSLCommerz settings, payment methods, notifications, and security options for your payment system.
            </div>
        </a>

        <a href="@Url.Action("History", "PaymentApproval")" class="action-card history">
            <div class="action-icon">
                <i class="fas fa-history"></i>
            </div>
            <div class="action-title">Payment History</div>
            <div class="action-description">
                View complete transaction history, payment details, and track all payment activities across the system.
            </div>
        </a>

        <a href="@Url.Action("Index", "PaymentApproval")" class="action-card approvals">
            <div class="action-icon">
                <i class="fas fa-check-circle"></i>
            </div>
            <div class="action-title">Payment Approvals</div>
            <div class="action-description">
                Review and approve pending manual payments, bank transfers, and other payment requests requiring approval.
            </div>
        </a>

        <a href="@Url.Action("Index", "Booking")" class="action-card ssl">
            <div class="action-icon">
                <i class="fas fa-shopping-cart"></i>
            </div>
            <div class="action-title">Process Payments</div>
            <div class="action-description">
                Create new bookings and process SSLCommerz payments for services and orders through the booking system.
            </div>
        </a>
    </div>

    <div class="recent-activity">
        <h3 class="activity-title">
            <i class="fas fa-clock me-2"></i>
            Recent Activity
        </h3>
        
        <div class="activity-item">
            <div class="activity-icon success">
                <i class="fas fa-check"></i>
            </div>
            <div class="activity-content">
                <div class="activity-text">Payment system initialized successfully</div>
                <div class="activity-time">Just now</div>
            </div>
        </div>
        
        <div class="activity-item">
            <div class="activity-icon pending">
                <i class="fas fa-clock"></i>
            </div>
            <div class="activity-content">
                <div class="activity-text">No pending payments at this time</div>
                <div class="activity-time">System ready</div>
            </div>
        </div>
        
        <div class="activity-item">
            <div class="activity-icon success">
                <i class="fas fa-cog"></i>
            </div>
            <div class="activity-content">
                <div class="activity-text">Payment settings configured</div>
                <div class="activity-time">System ready</div>
            </div>
        </div>
    </div>
</div>