@model Leave
@{
    ViewData["Title"] = "Leave Request Details";
    Layout = "_DashboardLayout";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-secondary">
                        <i class="fas fa-calendar-alt me-2"></i>Leave Request Details
                    </h6>
                    <span class="badge @(Model.ApprovalStatus == "Pending" ? "bg-warning" : Model.ApprovalStatus == "Approved" ? "bg-success" : "bg-danger")">
                        @Model.ApprovalStatus
                    </span>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 order-md-1">
                            <h6 class="text-primary mb-3">Employee Information</h6>
                            <table class="table table-borderless">
                                <tr>
                                    <td><strong>Employee ID:</strong></td>
                                    <td>@Model.Employee?.EmployeeId</td>
                                </tr>
                                <tr>
                                    <td><strong>Name:</strong></td>
                                    <td>@Model.Employee?.Name</td>
                                </tr>
                                <tr>
                                    <td><strong>Role:</strong></td>
                                    <td>@Model.Employee?.Role</td>
                                </tr>
                                <tr>
                                    <td><strong>Department:</strong></td>
                                    <td>@Model.Employee?.Department</td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6 order-md-2">
                            <h6 class="text-primary mb-3">Leave Information</h6>
                            <table class="table table-borderless">
                                <tr>
                                    <td><strong>Leave Type:</strong></td>
                                    <td>@Model.LeaveType</td>
                                </tr>
                                <tr>
                                    <td><strong>Start Date:</strong></td>
                                    <td>@Model.StartDate.ToString("dd/MM/yyyy")</td>
                                </tr>
                                <tr>
                                    <td><strong>End Date:</strong></td>
                                    <td>@Model.EndDate.ToString("dd/MM/yyyy")</td>
                                </tr>
                                <tr>
                                    <td><strong>Number of Days:</strong></td>
                                    <td>@Model.NumberOfDays</td>
                                </tr>
                                <tr>
                                    <td><strong>Request Date:</strong></td>
                                    <td>@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-12">
                            <div class="card border-0 shadow-sm">
                                <div class="card-header bg-light">
                                    <strong>Employee Leave Balances (@DateTime.Now.Year)</strong>
                                </div>
                                <div class="card-body p-2">
                                    @{ var balances = ViewBag.LeaveBalances as List<LeaveBalance> ?? new List<LeaveBalance>(); }
                                    @if (balances.Any())
                                    {
                                        <div class="table-responsive">
                                            <table class="table table-sm mb-0">
                                                <thead>
                                                    <tr>
                                                        <th>Type</th>
                                                        <th class="text-center">Entitled</th>
                                                        <th class="text-center">Used</th>
                                                        <th class="text-center">Pending</th>
                                                        <th class="text-center">Remaining</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var b in balances)
                                                    {
                                                        <tr>
                                                            <td>@b.LeaveType</td>
                                                            <td class="text-center"><span class="badge bg-primary">@b.TotalEntitled</span></td>
                                                            <td class="text-center"><span class="badge bg-success">@b.Used</span></td>
                                                            <td class="text-center"><span class="badge bg-warning">@b.Pending</span></td>
                                                            <td class="text-center"><span class="badge @(b.Remaining > 0 ? "bg-info" : "bg-danger")">@b.Remaining</span></td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="text-muted small">No balances found.</div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row mt-4">
                        <div class="col-12">
                            <h6 class="text-primary mb-3">Reason for Leave</h6>
                            <div class="border rounded p-3 bg-light">
                                <p class="mb-0">@Model.Reason</p>
                            </div>
                        </div>
                    </div>

                    @if (Model.ApprovalStatus != "Pending")
                    {
                        <div class="row mt-4">
                            <div class="col-12">
                                <h6 class="text-primary mb-3">Approval Information</h6>
                                <table class="table table-borderless">
                                    <tr>
                                        <td><strong>Approved By:</strong></td>
                                        <td>@Model.ApprovedBy?.Name</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Approval Date:</strong></td>
                                        <td>@Model.ApprovalDate?.ToString("dd/MM/yyyy HH:mm")</td>
                                    </tr>
                                    @if (!string.IsNullOrEmpty(Model.ApprovalRemarks))
                                    {
                                        <tr>
                                            <td><strong>Remarks:</strong></td>
                                            <td>@Model.ApprovalRemarks</td>
                                        </tr>
                                    }
                                </table>
                            </div>
                        </div>
                    }

                    <div class="d-flex justify-content-between mt-4">
                        <a href="@Url.Action("Index", "LeaveApproval")" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Back to Leave Approvals
                        </a>
                        
                        @if (Model.ApprovalStatus == "Pending")
                        {
                            <div>
                                <button type="button" class="btn btn-success me-2" data-bs-toggle="modal" data-bs-target="#approveModal">
                                    <i class="fas fa-check me-1"></i>Approve
                                </button>
                                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#rejectModal">
                                    <i class="fas fa-times me-1"></i>Reject
                                </button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Approve Modal -->
<div class="modal fade" id="approveModal" tabindex="-1" aria-labelledby="approveModalLabel" aria-hidden="true">
    <div class="modal-dialog">
<div class="modal-content bg-white">
            <div class="modal-header">
                <h5 class="modal-title" id="approveModalLabel">Approve Leave Request</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="Approve" method="post">
                <div class="modal-body">
                    <input type="hidden" name="id" value="@Model.LeaveId" />
                    <div class="mb-3">
                        <label for="approvalRemarks" class="form-label">Approval Remarks (Optional)</label>
                        <textarea class="form-control" id="approvalRemarks" name="remarks" rows="3" placeholder="Add any remarks for this approval..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-check me-1"></i>Approve Leave
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Reject Modal -->
<div class="modal fade" id="rejectModal" tabindex="-1" aria-labelledby="rejectModalLabel" aria-hidden="true">
    <div class="modal-dialog">
<div class="modal-content bg-white">
            <div class="modal-header">
                <h5 class="modal-title" id="rejectModalLabel">Reject Leave Request</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="Reject" method="post">
                <div class="modal-body">
                    <input type="hidden" name="id" value="@Model.LeaveId" />
                    <div class="mb-3">
                        <label for="rejectionRemarks" class="form-label">Rejection Reason *</label>
                        <textarea class="form-control" id="rejectionRemarks" name="remarks" rows="3" placeholder="Please provide a reason for rejection..." required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-times me-1"></i>Reject Leave
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            // Handle form submissions
            $('form[asp-action="Approve"]').on('submit', function(e) {
                if (!confirm('Are you sure you want to approve this leave request?')) {
                    e.preventDefault();
                }
            });
            
            $('form[asp-action="Reject"]').on('submit', function(e) {
                var remarks = $('#rejectionRemarks').val().trim();
                if (!remarks) {
                    alert('Please provide a reason for rejection.');
                    e.preventDefault();
                    return false;
                }
                if (!confirm('Are you sure you want to reject this leave request?')) {
                    e.preventDefault();
                }
            });
        });
    </script>
}
