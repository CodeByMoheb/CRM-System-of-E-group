@model Sector_13_Welfare_Society___Digital_Management_System.Models.CategoryViewModel

@{
    ViewData["Title"] = "Category Management";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container mt-4">
    <div class="text-center mb-4">
        <h2 class="fw-bold text-primary">📂 Category Management</h2>
        <p class="text-muted">Manage your categories efficiently — add, edit, or delete below.</p>
    </div>

    <div class="row g-4">
        <!-- Category Form -->
        <div class="col-lg-4">
            <div class="card border-0 shadow-lg h-100">
                <div class="text-white fw-semibold gap-2 px-3 py-2 rounded-top shadow-sm" style="background: linear-gradient(90deg, #0d6efd, #6f42c1);
                            font-size: 1.1rem;
                            letter-spacing: 0.3px;">
                    <div class="d-flex align-items-center justify-content-between">
                        <h4 class="mb-0" >
                            
                            @((Model.Category.Id == 0) ? "➕ Add New Category" : "✏️ Edit Category")
                        </h4>
                        <span class="badge bg-white text-success">@((Model.Category.Id == 0) ? "New" : $"ID: {Model.Category.Id}")</span>
                    </div>
                </div>

                <div class="card-body">
                    <form id="categoryForm" asp-action="SaveCategory" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Category.Id" />

                        <div class="mb-3">
                            <label asp-for="Category.Type" class="form-label fw-semibold"></label>
                            <input asp-for="Category.Type" class="form-control" placeholder="Enter category type..." />
                            <span asp-validation-for="Category.Type" class="text-danger small"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Category.Name" class="form-label fw-semibold"></label>
                            <input asp-for="Category.Name" class="form-control" placeholder="Enter category name..." />
                            <span asp-validation-for="Category.Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Category.Value" class="form-label fw-semibold"></label>
                            <input asp-for="Category.Value" class="form-control" placeholder="Enter category value..." />
                            <span asp-validation-for="Category.Value" class="text-danger small"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input asp-for="Category.IsActive" class="form-check-input" />
                            <label asp-for="Category.IsActive" class="form-check-label fw-semibold"></label>
                            <span asp-validation-for="Category.IsActive" class="text-danger small"></span>
                        </div>
                        <input type="hidden" asp-for="Category.Serial" />
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-success w-50">
                                @(Model.Category.Id == 0 ? "💾 Save" : "🔄 Update")
                            </button>
                            <a asp-action="Category" class="btn btn-outline-secondary w-50">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Category List -->
        <div class="col-lg-8">
            <div class="card border-0 shadow-lg">
                <div class="card-header bg-light fw-semibold">
                    📋 Existing Categories
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <div id="categoryList">
                            @await Html.PartialAsync("_CategoryList", Model.Categories)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {
            $("#categoryForm").submit(function (e) {
                e.preventDefault();

                $.ajax({
                    url: $(this).attr("action"),
                    type: "POST",
                    data: $(this).serialize(),
                    success: function (result) {
                        $("#categoryList").html(result);
                        $("#categoryForm")[0].reset();
                        $("#Category_Id").val("0");
                        $(".card-header.bg-primary").text("➕ Add New Category");
                    },
                    error: function (xhr) {
                        alert("Error: " + xhr.statusText);
                    }
                });
            });
        });
    </script>
}
