@model LocationChargeViewModel

@{
    ViewData["Title"] = "Location Charge Management";
    Layout = "~/Views/Shared/_DashBoardLayout.cshtml";
}

<div class="row">
    <!-- Form Card -->
    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-header text-white text-center" style="font-size:25px;background-color:#3B3B98">
                @(Model.LocationCharge.Id == 0 ? "Add Location Charge" : "Edit Location Charge")
            </div>
            <div class="card-body">
                <form asp-action="Save" method="post">
                    <input type="hidden" asp-for="LocationCharge.Id" />

                    <div class="form-group mb-3">
                        <label asp-for="LocationCharge.LChargeType"></label>
                        <input asp-for="LocationCharge.LChargeType" class="form-control" placeholder="Charge Type" />
                        <span asp-validation-for="LocationCharge.LChargeType" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="LocationCharge.LChargeValue"></label>
                        <input asp-for="LocationCharge.LChargeValue" class="form-control" placeholder="Charge Value" />
                        <span asp-validation-for="LocationCharge.LChargeValue" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-success">@(Model.LocationCharge.Id == 0 ? "Add" : "Update")</button>
                        <a asp-action="Index" class="btn btn-secondary">Clear</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- List Card -->
    <div class="col-md-8">
        <div class="card shadow-sm p-2">
            <div class="card-header text-white text-center" style="font-size:25px;background-color:#596275">
                Location Charge List
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped mb-0" id="ChargeTable">
                        <thead class="table-light">
                            <tr>
                                <th>Charge Type</th>
                                <th>Charge Value</th>
                                <th style="width: 150px;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.LocationChargeList)
                            {
                                <tr>
                                    <td>@item.LChargeType</td>
                                    <td>@item.LChargeValue</td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">Edit</a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script>
        new DataTable('#ChargeTable');
    </script>
}

